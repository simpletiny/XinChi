package seentao.xhsn.sys.city.action;

import java.util.List;
import java.util.Map;

import org.apache.struts2.json.annotations.JSON;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.config.BeanDefinition;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import seentao.xhsn.bean.HsCityBO;
import seentao.xhsn.common.BaseAction;
import seentao.xhsn.common.ResourcesConstants;
import seentao.xhsn.sys.city.bean.CityDataBean;
import seentao.xhsn.sys.city.service.ICityService;

@Controller
@Scope(BeanDefinition.SCOPE_PROTOTYPE)
public class CityAction extends BaseAction {
	private static final long serialVersionUID = 6589694992514132089L;
	private CityDataBean cdbean;

	@Autowired
	private ICityService cityService;

	/**
	 * 取得数据json
	 * 
	 * @return
	 */
	public String getDataJson() {
		cdbean = cityService.getCdBean();
		// cdbean = ResourcesConstants.CITY_DATA_BEAN;
		return SUCCESS;
	}

	private Map<String, String> provinceList;
	private List<HsCityBO> cityList;
	private String provinceCode;

	/**
	 * 城市管理页面初始化
	 * 
	 * @return
	 */
	public String manageCityInit() {
		provinceList = cityService.getProvinceList();
		if (provinceList != null && provinceList.size() > 0) {
			provinceCode = provinceList.keySet().iterator().next();
			fetchCityList();
		}
		return SUCCESS;
	}

	/**
	 * 取得城市列表
	 * 
	 * @return
	 */
	public String fetchCityList() {
		cityList = cityService.getCityList(provinceCode);
		return SUCCESS;
	}

	private HsCityBO cityBo;

	/**
	 * 保存添加的City
	 * 
	 * @return
	 */
	public String saveCity() {
		resultStr = cityService.saveCity(cityBo);
		return SUCCESS;
	}

	private String city_id;

	/**
	 * 删除城市
	 * 
	 * @return
	 */
	public String deleteCity() {
		resultStr = cityService.deleteCityById(city_id);
		return SUCCESS;
	}

	private String cityIds;

	/**
	 * 标记主要城市
	 * 
	 * @return
	 */
	public String markMainCity() {
		resultStr = cityService.markMainCity(cityIds);
		return SUCCESS;
	}

	public CityDataBean getCdbean() {
		return cdbean;
	}

	public void setCdbean(CityDataBean cdbean) {
		this.cdbean = cdbean;
	}

	@JSON(serialize = false)
	public Map<String, String> getProvinceList() {
		return provinceList;
	}

	public void setProvinceList(Map<String, String> provinceList) {
		this.provinceList = provinceList;
	}

	@JSON(serialize = false)
	public String getProvinceCode() {
		return provinceCode;
	}

	public void setProvinceCode(String provinceCode) {
		this.provinceCode = provinceCode;
	}

	@JSON(serialize = false)
	public List<HsCityBO> getCityList() {
		return cityList;
	}

	public void setCityList(List<HsCityBO> cityList) {
		this.cityList = cityList;
	}

	@JSON(serialize = false)
	public HsCityBO getCityBo() {
		return cityBo;
	}

	public void setCityBo(HsCityBO cityBo) {
		this.cityBo = cityBo;
	}

	@JSON(serialize = false)
	public String getCity_id() {
		return city_id;
	}

	public void setCity_id(String city_id) {
		this.city_id = city_id;
	}

	@JSON(serialize = false)
	public String getCityIds() {
		return cityIds;
	}

	public void setCityIds(String cityIds) {
		this.cityIds = cityIds;
	}
}

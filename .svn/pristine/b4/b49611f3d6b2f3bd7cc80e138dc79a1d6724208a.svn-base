@charset "utf-8";
/* CSS Document */
.top_inner .logo,.top_inner .person{ float:left;}
.top_inner .logo { width:704px; height:83px;}
.top_inner .logo img,.top_inner .logo ul{ float:left;}
.top_inner .logo ul{ width:400px; margin-left:25px;}
.top_inner .logo ul li{ float:left; margin-left:20px;}
.top_inner .logo ul li a{ font-size:18px; color:#FFF; display:block;  line-height:83px;}
.top_inner .logo ul li .bold{ font-weight:bold; background:url(../../../common/images/top/triangle.jpg) no-repeat bottom center;}
.top_inner .person{ width:320px; height:83px; line-height:83px; position:relative;}
.top_inner .person .name { float:left; width:180px; margin-left:15px; color:#FFF; white-space:nowrap; text-overflow:ellipsis;-o-text-overflow:ellipsis; position:relative; z-index:1000; background:url(../../../common/images/top/triangle_up.png) right center no-repeat;}
.top_inner .person .name:hover ul { display:block;}
.top_inner .person .name ul{ position:absolute; display:none;}
.top_inner .person .name ul li a{ display:block; width:120px; padding-left:30px; height:26px; line-height:26px; background:#38ac96; color:#FFF;}
.top_inner .person .name ul li a:hover{ background:#a1d8ce;}
.top_inner .person .active{background:url(../../../common/images/top/triangle_d.png) no-repeat right center;}
.top_inner .person .xl { position:absolute; left:210px; top:83px;}
.top_inner .person .xl li a{ display:block; width:78px; padding-left:30px; height:26px; line-height:26px; font-size:12px; color:#fdfdfd; background:#38ac96;}
.top_inner .person .xl li a:hover{ background:#a1d8ce;}
#main{ width:1024px; margin:0 auto;  margin-bottom:20px;}
#main .dj{ line-height:40px; padding-left:460px;}
#main .dj a{ font-size:13px; color:#767575; margin-left:15px;}
#main .info{ background:#FFF;  position:relative; padding-top:20px; display:block;width:1024px}
#main .info table td span{ margin-right:50px; font-size:16px;}
#main ul li{ width:1024px; padding-bottom:15px;background:#FFF; border-bottom:2px solid #d7d6d6; margin-top:10px;}
#main ul li h4{ line-height:40px; padding-left:55px; font-size:15px; color:#636262; font-weight:normal; position:relative;}
#main ul li h4 span{ font-size:12px; position:absolute; left:900px;}
#main ul li h5{ font-size:13px; padding-left:55px; line-height:22px; position:relative;}
#main ul li h5 a{ font-size:12px; position:absolute; left:900px; font-weight:normal;}
#main ul li p{ margin-left:55px; width:720px; line-height:1.8em;}

.transparent {
	left:0;
	top:0;
	position:absolute;
	  filter:alpha(opacity=50);  
	  -moz-opacity:0.5;  
	  -khtml-opacity: 0.5;  
	  opacity: 0.5;
	  background:#000;
	  z-index:10000;
} 
#tanchu{position:fixed;width:832px; z-index:100000; background:#e5ebe9; padding-bottom:20px;}
#tanchu h4{ height:58px; position:relative;background:url(../images/tanchubg.png) top no-repeat;}
#tanchu h4 a{ display:block; width:32px; height:32px; background:url(../images/close.png) no-repeat; position:absolute; left:762px; top:14px;}
.tanchu_inner { width:582px; background:#FFF; margin-left:125px; margin-top:30px; background:FFF;}
.tanchu_inner p{ line-height:50px; margin-left:50px;}


<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
 <%@taglib uri="/struts-tags" prefix="s" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
pageContext.setAttribute("basePath", basePath);
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<base href="<%=basePath %>" />
<meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
<title>新道人才网</title>
<link rel="stylesheet" type="text/css" href="<%=basePath %>common/css/basic.css"  />
<link rel="stylesheet" type="text/css" href="<%=basePath %>enterprise/newjob/css/new_job.css"  />
<script src="<%=basePath %>common/js/jquery-1.8.1.min.js" type="text/javascript"></script>
<script type="text/javascript" src="common/js/drag.js"></script>
<script type="text/javascript" src="common/js/city_arr.js"></script>
<script type="text/javascript" src="common/js/industry_arr.js"></script>
<script type="text/javascript" src="common/js/funtype_arr.js"></script>
<script type="text/javascript" src="common/js/funtype_arr.js"></script>
<script type="text/javascript" src="common/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="enterprise/newjob/js/new_job.js"></script>
</head>
<body>
<script type="text/javascript">
window['basePath'] = "<%=basePath%>";
// 是否在数组内
function in_array(needle, haystack) {
	if(typeof needle == 'string' || typeof needle == 'number') {
		for(var i in haystack) {
			if(haystack[i] == needle) {
					return true;
			}
		}
	}
	return false;
}
</script>
	<div id="wrap">
      <s:include value="/common/page/head_enterprise.jsp"></s:include>
      <div id="main">
      	<s:form id="edit_form" theme="simple">
      	<s:hidden id="rel_status" name="rjbo.rel_status"/>
      	<s:hidden name="rjbo.id"/>
      	<img src="<%=basePath %>enterprise/newjob/images/njp.jpg" />
        <h4></h4>
        <div class="main_inner">
        	<table width="900" cellspacing="0px"  style="border-collapse:collapse; border:0; color:#6d6e71;">
                	
                  <tr>
                        <td width="125" height="48" style="background:url(<%=basePath %>common/images/red.png) no-repeat left center; padding-left:30px;">行业类别：</td>
                    	<td width="775"  style="text-align:left;">
                        	<script type="text/javascript" src="<%=basePath %>common/js/industry_func.js"></script>
							<input id="btn_IndustryID_2" type="button" value="${rjbo.trade_name}" onclick="IndustrySelect_2()" />
                      		<s:hidden id="IndustryID_2" name="rjbo.trade_id"/>
                        </td>
                    </tr>
                    <tr>
                        <td width="125" height="48" style="background:url(<%=basePath %>common/images/red.png) no-repeat left center; padding-left:30px;">职位类别：</td>
                    	<td width="775" style="text-align:left;">
                        <script type="text/javascript" src="<%=basePath %>common/js/funtype_func.js"></script>
						<input id="btn_FuntypeID" type="button" value="${rjbo.job_name}" onclick="funtypeSelect_2()" />
						<s:hidden id="FuntypeID" name="rjbo.job_id"/>
                        </td>
                    </tr>
                    <tr>
                        <td width="125" height="48" style="background:url(<%=basePath %>common/images/red.png) no-repeat left center; padding-left:30px;">职位名称：</td>
                    	<td width="775"  style="text-align:left;">
                        <s:textfield name="rjbo.rel_name" id="rel_name" style="width:420px; padding-left:5px; height:33px; line-height:33px; background:url(enterprise/newjob/images/srlong.jpg); font-size:14px; color:#636262;" />
                        </td>
                    </tr>
                    <tr>
                        <td width="125" height="48"  style="background:url(<%=basePath %>common/images/red.png) no-repeat left center; padding-left:30px; position:relative;">月薪范围：</td>
                    	<td width="775" style="text-align:left; position:relative;">
                        <s:textfield onclick="hide('#HMF-1')" name="rjbo.monthly_salary" cssStyle="background:url(common/images/select.jpg) no-repeat;width:195px; padding-left:3px;height:35px; line-height:35px; border:none;cursor:pointer; font-size:14px;" id="am" class="am"/>
                        <s:hidden name="rjbo.salary_code" id="salary_code"/>
                        <div id="HMF-1" style="display:none; position:absolute; left:0px; top:40px; width:198px; background:#FFF; z-index:100" cssClass="bm">
						 <span onclick="pickSalary('0',this)" class="cur">请选择</span>
						 <s:iterator value="monthlyPayList" id="mp" >
						  <span onclick="pickSalary('${mp.dictionary_code}',this)" class="cur"><s:property value="#mp.value"/></span>
						 </s:iterator>
                		</div>
                        </td>
                    </tr>
                    <tr>
                        <td width="125" height="48" style="background:url(<%=basePath %>common/images/red.png) no-repeat left center; padding-left:30px;">工作地点：</td>
                    	<td width="775"  style="text-align:left;">
                        <script type="text/javascript" src="<%=basePath %>common/js/city_func.js"></script>
						<input id="btn_jobArea" type="button" value="${rjbo.county_name}" onclick="jobAreaSelect()" />
						<s:hidden id="jobAreaID" name="rjbo.county_code"/>
                        </td>
                    </tr>
                     <tr>
                        <td width="125" height="48" style="padding-left:30px;">招聘人数：</td>
                    	<td width="775"  style="text-align:left;">
                    		  <s:textfield name="rjbo.rel_count" onkeydown="return onlynumber(event)" maxlength="10" style="width:190px; padding-left:5px; height:33px; line-height:33px; background:url(enterprise/newjob/images/srlong.jpg); font-size:14px; color:#636262;" />
                        </td>
                    </tr>
                  <tr>
                        <td width="125" height="48" style="padding-left:30px;">工作性质：</td>
                    	<td width="775"  style="text-align:left;">
                    		<s:radio list="#{'1':'全职','2':'兼职','3':'实习'}" name="rjbo.rel_property" cssStyle="width:10px; height:10px; margin-right:10px;"></s:radio>
                        </td>
                    </tr>
                    <tr>
                        <td width="125" height="48"  style=" padding-left:30px; position:relative;">学历要求：</td>
                    	<td width="775"  style="text-align:left; position:relative;">
                        <s:textfield onclick="hide('#HMF-2')" name="rjbo.education_value" style="background:url(common/images/select.jpg) no-repeat;width:195px; padding-left:3px;height:35px; line-height:35px; border:none;cursor:pointer; font-size:14px;" id="bm" cssClass="am"/>
                       	<s:hidden name="rjbo.education_code" id="education_code"/>
                        <div id="HMF-2" style="display: none; position:absolute; z-index:10; left:0px; top:40px; width:196px; background:#FFF; " class="bm-2">
						<span onclick="pickEdu('0',this)" class="cur">请选择</span>
						 <s:iterator value="educationList" id="el" >
						 <span onclick="pickEdu('${el.dictionary_code}',this)" class="cur"><s:property value="#el.value"/></span>
						 </s:iterator>
                		</div>
                        </td>
                    </tr>
                    <tr>
                        <td width="125" height="48"  style=" padding-left:30px; position:relative;">工作经验：</td>
                    	<td width="775"  style="text-align:left; position:relative;">
                        <s:textfield onclick="hide('#HMF-3')" name="rjbo.exp_value" style="background:url(common/images/select.jpg) no-repeat;width:195px; padding-left:3px;height:35px; line-height:35px; border:none;cursor:pointer; font-size:14px;" id="cm" cssClass="am"/>
                       	<s:hidden name="rjbo.exp_id" id="exp_id"/>
                        <div id="HMF-3" style="display: none; position:absolute; z-index:10; left:0px; top:40px; width:196px; background:#FFF; " class="bm-2">
						<span onclick="pickExp('0',this)" class="cur">请选择</span>
						 <s:iterator value="expList" id="el" >
						 <span onclick="pickExp('${el.dictionary_code}',this)" class="cur"><s:property value="#el.value"/></span>
						 </s:iterator>
                		</div>
                        </td>
                    </tr>
                    <tr>
                        <td width="125" height="48" style="background:url(<%=basePath %>common/images/red.png) no-repeat left center; padding-left:30px;">投递邮箱：</td>
                    	<td width="775"  style="text-align:left;">
                        <s:textfield id="txt_linkman_email" name="rjbo.linkman_email" style="width:420px; padding-left:5px; height:33px; line-height:33px; background:url(enterprise/newjob/images/srlong.jpg); font-size:14px; color:#636262;" />
                        </td>
                    </tr>
                    <tr>
                        <td width="125" style=" padding-left:30px; vertical-align:top; padding-top:10px;">职位描述：</td>
                    	<td width="775" style="text-align:left; padding-top:5px;">
                        	<textarea id="rel_description" name="rjbo.rel_description" cols="" rows="" style="width:714px; height:186px; padding:5px; background:url(enterprise/newjob/images/textarea_b.jpg); font-size:14px; color:#636262; overflow:auto; overflow-x:hidden;"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td width="125" height="30"></td>
                    	<td width="775"  style="text-align:left; font-size:12px; color:#757474;">
							最多70000个字符（包含HTML标签，1个中文字占2个字符）
                        </td>
                    </tr>
                    <tr>
                        <td width="125" height="120"></td>
                    	<td width="775"  style="text-align:left; font-size:12px; color:#757474;">
                        <input name="" id="btn_publish" value="发 布" type="button" style="width:190px; height:46px; background:url(<%=basePath %>enterprise/newjob/images/fb.jpg); cursor:pointer; font-size:16px; color:#fdfdfd;"/>
                        <input name="" id="btn_save" value="保 存" type="button" style="width:190px; height:46px; background:url(<%=basePath %>enterprise/newjob/images/bc.jpg); cursor:pointer; font-size:16px; color:#747171; margin-left:50px;"/>
                        </td>
                    </tr>
                </table>
        </div>
      	</s:form>
      </div>
      <s:include value="/common/page/footer.jsp"></s:include>
    </div>
        <!-- alpha div -->
<div id="maskLayer" style="display:none">
<iframe id="maskLayer_iframe" frameBorder=0 scrolling=no style="filter:alpha(opacity=50)"></iframe>
<div id="alphadiv" style="filter:alpha(opacity=50);-moz-opacity:0.5;opacity:0.5"></div>
	<div id="drag">
		<h3 id="drag_h"></h3>
		<div id="drag_con"></div><!-- drag_con end -->
	</div>
</div><!-- maskLayer end -->
</div>
<!-- alpha div end -->
<div id="sublist" style="display:none"></div>
</body>
</html>

<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ page import="seentao.xhsn.tools.PropertiesUtil" %>
 <%@taglib uri="/struts-tags" prefix="s" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
String login_project_url=PropertiesUtil.getProperty("login_project_url");
String send_email_person = login_project_url + PropertiesUtil.getProperty("findpswd_person_url");
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="Cache-Control" CONTENT="no-store">
<meta http-equiv="expires" content="0">  
<title>新道人才网</title>
<link rel="stylesheet" type="text/css" href="<%=basePath%>common/css/basic.css"  />
<link rel="stylesheet" type="text/css" href="<%=basePath%>login/css/login.css"  />
<script src="<%=basePath%>common/js/jquery-1.8.1.min.js" type="text/javascript"></script>
<script src="<%=basePath%>common/js/jquery.cookie.js" type="text/javascript"></script>
<script src="<%=basePath%>common/js/layer-v1.8.1/layer/layer.min.js"></script>
<script src="<%=basePath%>login/js/login.js" type="text/javascript"></script>
</head>

<body>
	<div id="wrap">
    	<jsp:include page="/common/page/head.jsp" />
        <div style='width:586px; height:568px; margin:0 auto;'>
        <s:form action="login" method="post" id="myForm" namespace="/user"> 
       		<input type="hidden" name="type" id="type" value="${type }"/>
        	<div id="main">
        		<ul>
	            	<li>
	        			<a style="cursor:pointer;" class="person">个人登录
	            		</a>
	                    <div class="person_inner">
	                    	<ul>
	                    		<s:if test="type==1 ">
	                    			<span style=' color:red;'><s:property value="tip"/></span>
	                    		</s:if>
	                        	<li style="margin-bottom:30px;">
	                        	<s:set name="person_username_text" value="'请输入您的邮箱（新道学员帐号）'"></s:set>
	                        	<s:if test='person.user_mail != null && person.user_mail != ""'>
	                        		<s:set name="person_username_text" value="person.user_mail"></s:set>
	                        	</s:if>
	                            	<input id="person_username" name="person.user_mail" value="${person_username_text }"  onfocus="personFocus();" onblur="personBlur();" type="text" class="sr"/>
	                            	<span id="per_tip" style="overflow:hidden; text-overflow:ellipsis; white-space:nowrap;color:red;font-size:11px" title=""></span>
	                            </li>
	                            <li style="position:relative; margin-bottom:87px;">
	                                <span style="position:absolute; left:15px; top:11px; font-size:16px; color:#adacac;" class="mima">请输入您的密码</span>
	                            	<input id="person_pwd" name="person.user_pwd" type="password" class="srmm" style="position:absolute;"/>
	                            	<span id="perpwd_tip" style="position:absolute; left:440px; top:15px;overflow:hidden; width:70px;text-overflow:ellipsis; white-space:nowrap;color:red;font-size:11px" title=""></span>
	                            </li>
	                            <br  />
	                            <li><input id="person_check" name="person.remember_flag" type="checkbox"  value="true" style=" margin-right:5px; vertical-align:middle;"/>记住我<a href="<%=send_email_person %>" class="wjmm">忘记密码</a></li>
	                            <li><input name="" type="button" class="dl" value="登录" id="person_btn"/></li>
	                            <li style=" width:432px; text-align:center; margin-top:15px;">还没有账号？<a href="<%=login_project_url%>" style="color:#00afe9; font-weight:bold;">去注册</a></li>
	                        </ul>
	                    </div>
	            	</li>
	            	<li>
	        			<a style="cursor:pointer;" class="company">企业登录</a>
	                    <div class="company_inner">
	                    	<ul>
	                    		<s:if test="type==2">
	                    			<span style=' color:red;'><s:property value="tip"/></span>
	                    		</s:if>
	                        	<li style="margin-bottom:30px;">
	                        	<s:set name="corp_username_text" value="'请输入您的邮箱'" />
	                        	<s:if test='corp.user_mail != null && corp.user_mail !=""'>
	                        		<s:set name="corp_username_text" value="corp.user_mail" />
	                        	</s:if>
	                            	<input id="corp_username" name="corp.user_mail" value="${corp_username_text }" onfocus="if(value=='请输入您的邮箱') {value=''}"  type="text" class="sr"/>
	                            	<span id="corp_tip" style="overflow:hidden; text-overflow:ellipsis; white-space:nowrap;color:red;" title=""></span>
	                            </li>
	                            <li style="position:relative; margin-bottom:87px;">
	                                <span style="position:absolute; left:15px; top:11px; font-size:16px; color:#adacac;" class="mima1">请输入您的密码</span>
	                            	<input id="corp_pwd" name="corp.user_pwd" type="password" class="srmm1" style="position:absolute;"/>
	                            	<span id="corppwd_tip" style="position:absolute; left:440px; top:15px;overflow:hidden; width:70px;text-overflow:ellipsis; white-space:nowrap;color:red;font-size:11px" title=""></span>
	                             </li>
	                            <br  />
	                            <li><input id="corp_check" name="corp.remember_flag" type="checkbox"  value="true" style=" margin-right:5px; vertical-align:middle;"/>记住我<a href="share/findpassword/find_pswd_ent.jsp" class="wjmm">忘记密码</a></li>
	                            <li><input name="" type="button" class="dl" value="登录" id="corp_btn"/></li>
	                            <li style=" width:432px; text-align:center; margin-top:15px;">还没有账号？<a href="<%=basePath%>share/register/regist_ent.jsp" style="color:#00afe9; font-weight:bold;">去注册</a></li>
	                        </ul>
	                    </div>
	            	</li>
            		<br />
            	</ul>
        	</div>
       		<s:token></s:token>
        	</s:form>
         </div> 	
        <jsp:include page="/common/page/footer.jsp" />
    </div>
</body>
</html>

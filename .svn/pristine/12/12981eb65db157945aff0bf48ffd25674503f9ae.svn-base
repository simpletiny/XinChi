$(document).ready(function() {
	$("#btn_publish_job").click(function() {
		window.location.href = "releaseJobInit";
	});
	$("#btn_check_receive").click(function() {
		window.location.href = "manageResumeInit";
	});
	$("#btn_search").click(function() {
		searchResume();
	});

	switchTab(1);
	search();
});
function search() {
	$.ajax({
		url : "searchCollegeResource",
		type : "get",
		success : function(r) {
			$("#container").html(r);
		}
	});
}
/**
 * 查看更多人才发布
 */
function watchMore() {
	window.location.href = "searchMoreCr?type=first";
}
/**
 * 搜简历
 */
function searchResume() {
	$("#form_search").submit();
}

function hide(id) {
	$(id).is(":visible") ? $(id).hide() : $(id).show();
}
function pick(span, v) {
	$('#txt_job_exp').val($(span).html());
	$('#hid_job_exp').val(v);
	hide('#HMF-1')
}

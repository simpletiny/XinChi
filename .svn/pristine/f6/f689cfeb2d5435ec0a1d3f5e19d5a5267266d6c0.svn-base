package seentao.xhsn.person.resumeother.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import seentao.xhsn.bean.HsResumeOtherBO;
import seentao.xhsn.common.DictionaryEnum;
import seentao.xhsn.common.ResourcesConstants;
import seentao.xhsn.common.SeentaoApplicationContext;
import seentao.xhsn.common.UserSessionBean;
import seentao.xhsn.person.resumeother.dao.IResumeOtherDAO;
import seentao.xhsn.person.resumeother.service.IResumeOtherService;
import seentao.xhsn.sys.leftmenu.service.ILeftMenuService;

@Service
public class ResumeOtherServiceImpl implements IResumeOtherService{

	@Autowired
	private IResumeOtherDAO dao;
	@Autowired
	private ILeftMenuService lmService;
	
	@Override
	@Transactional
	public void insert(HsResumeOtherBO bo) {
		dao.insert(bo);
		//更新菜单信息
		lmService.updateByParam(bo.getTable_name(),  DictionaryEnum.MENU_TOTALLY.getStringValue());
	}

	@Override
	public void update(HsResumeOtherBO bo) {
		dao.update(bo);
	}

	@Override
	@Transactional
	public void delResumeOther(String id) {
		this.delete(id);
		//更新菜单
		HsResumeOtherBO paramBO=new HsResumeOtherBO();
		UserSessionBean sessionBean=(UserSessionBean) SeentaoApplicationContext.getSession(ResourcesConstants.LOGIN_SESSION_KEY);
		paramBO.setRes_id(sessionBean.getRes_id());
		paramBO.setUser_id(sessionBean.getUser_sys_id());
		 List<HsResumeOtherBO> list = this.getAllByParam(paramBO);
		if(list!=null&&list.size()>0){
			lmService.updateByParam(paramBO.getTable_name(),  DictionaryEnum.MENU_TOTALLY.getStringValue());
		}else{
			lmService.updateByParam(paramBO.getTable_name(), DictionaryEnum.MENU_NEVER.getStringValue());
		}
	}
	
	@Override
	public void delete(String id) {
		dao.delete(id);
	}

	@Override
	public HsResumeOtherBO selectByPrimaryKey(String id) {
		return dao.selectByPrimaryKey(id);
	}

	@Override
	public List<HsResumeOtherBO> getAllByParam(HsResumeOtherBO bo) {
		return dao.getAllByParam(bo);
	}

	
}
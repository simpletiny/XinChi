package seentao.xhsn.sys.mailgroup.action;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.config.BeanDefinition;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import seentao.xhsn.bean.HsGroupMailRecordBO;
import seentao.xhsn.common.BaseAction;
import seentao.xhsn.sys.mailgroup.service.IMailGroupService;

/**
 * 群发邮件Action
 * 
 * @author niushixing 2015-1-22 09:16:12
 *
 */
@Controller
@Scope(BeanDefinition.SCOPE_PROTOTYPE)
public class MailGroupAction extends BaseAction {
	private static final long serialVersionUID = -2957069069537252448L;

	/**
	 * 页面初始化
	 * 
	 * @return
	 */
	public String init() {

		return SUCCESS;
	}

	private HsGroupMailRecordBO mailBo;

	@Autowired
	private IMailGroupService mailGroupService;

	/**
	 * 群发邮件
	 * 
	 * @return
	 */
	public String sendMailGroup() {
		resultStr = mailGroupService.sendMailGroup(mailBo);
		return SUCCESS;
	}

	public HsGroupMailRecordBO getMailBo() {
		return mailBo;
	}

	public void setMailBo(HsGroupMailRecordBO mailBo) {
		this.mailBo = mailBo;
	}
}

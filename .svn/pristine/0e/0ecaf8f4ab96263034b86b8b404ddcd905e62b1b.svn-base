package seentao.xhsn.person.evaluate.dao;

import java.util.List;

import seentao.xhsn.bean.HsEvaluateBO;

/** 
 * @author wjx 
 * @date 2014年11月24日 下午3:37:21 
 * @note 自我评价的dao
 */
public interface IEvaluateDao {
	
	/**
	 * 插入信息
	 * @param bo 自我评价
	 * @return 主键
	 */
	public String insert(HsEvaluateBO bo);
	
	/**
	 * 根据主键进行删除
	 * @param id 主键
	 * @return 影响的行数
	 */
	public int deleteByPK(String id);
	
	/**
	 * 根据主键更新信息
	 * @param bo 需要更新的信息
	 * @return 影响的行数
	 */
	public int updateByPK(HsEvaluateBO bo);
	
	/**
	 * 根据主键获取用户的自我评价
	 * @param id 主键
	 * @return 自我评价信息
	 */
	public HsEvaluateBO getEvaluateBoByPK(String id);
	
	/**
	 * 根据用户的id和简历的id获取用户的自我评价
	 * @param user_id 用户id
	 * @param res_id 简历id
	 * @return 自我评价的集合
	 */
	public List<HsEvaluateBO> findByUserIdAndResId(String user_id, String res_id);
}

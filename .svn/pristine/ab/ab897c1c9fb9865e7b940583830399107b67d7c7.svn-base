package seentao.xhsn.sys.major.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.stereotype.Repository;

import seentao.xhsn.bean.HsMajorBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.sys.major.dao.IMajorDAO;

@Repository
public class MajorDAOImpl extends SqlSessionDaoSupport implements IMajorDAO {

	private SqlSession sqlSession;
	private DaoUtil daoUtil;

	public void initDao() {
		if (daoUtil == null) {
			sqlSession = sqlSession == null ? getSqlSession() : sqlSession;
			daoUtil = new DaoUtil(sqlSession);
		}
	}

	@Override
	public String insert(HsMajorBO bo) {
		return daoUtil.insertBO("seentao.xhsn.bean.mappers.HsMajorBOMapper.insert", bo);
	}

	@Override
	public void update(HsMajorBO bo) {
		daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsMajorBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public void delete(String id) {
		daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsMajorBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public HsMajorBO selectByPrimaryKey(String id) {
		return (HsMajorBO) daoUtil.selectByPK("seentao.xhsn.bean.mappers.HsMajorBOMapper.selectByPrimaryKey", id);
	}

	@Override
	public List<HsMajorBO> getAllByParam(HsMajorBO bo) {
		List<HsMajorBO> list = daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsMajorBOMapper.selectByParam", bo);
		return list;
	}

	@Override
	public List<HsMajorBO> getBigMajor(HsMajorBO bo) {
		List<HsMajorBO> list = daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsMajorBOMapper.selectBigMajor", bo);
		return list;
	}

	@Override
	public List<HsMajorBO> getSmallMajor(HsMajorBO bo) {
		List<HsMajorBO> list = daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsMajorBOMapper.selectSmallMajor",
				bo);
		return list;
	}

	@Override
	public List<HsMajorBO> selectExists(HsMajorBO bo) {
		List<HsMajorBO> list = daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsMajorBOMapper.selectExists", bo);
		return list;
	}

}
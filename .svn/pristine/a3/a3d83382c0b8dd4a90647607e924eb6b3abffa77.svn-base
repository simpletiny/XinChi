<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@taglib uri="/struts-tags" prefix="s" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";

String lm_tab_name = "hs_userbasicinfo";
if(request.getAttribute("lm_tab_name") != null && request.getAttribute("lm_tab_name").toString().trim().length() > 0){
		lm_tab_name = String.valueOf(request.getAttribute("lm_tab_name").toString().trim().length());
}
%>
<script src="<%=basePath%>common/js/pwd.js" type="text/javascript"></script>
<html>
	<head>
	<link rel="stylesheet" type="text/css" href="common/css/head_person.css" />
	</head>
	<body>
		 <div id="top">
        	<div class="top_inner">
            	<div class="logo">
                	<img src="common/images/logo.png" />
                    <ul>
                    	<li><a href="person/goHomePage">首页</a></li>
                    	<li><a href="person/centerInit">个人中心</a></li>
                    	<li><a href="person/showubinfo?lm_tab_name=<%=lm_tab_name %>">简历管理</a></li>
                    	<li><a href="person/jobSearch/job_search.jsp" class="bold">职位搜索</a></li>
                    </ul>
                    <br />
                </div>
            	<div class="person">
                    <s:if test='#session.LOGIN_SESSION_BEAN.photo_url!=null&&#session.LOGIN_SESSION_BEAN.photo_url!=""'>
					 <div class="pic"><img src="${session.LOGIN_SESSION_BEAN.photo_url }" style="width:42px;height:42px;border-radius: 60px"/></div>
		    		</s:if>
		    		<s:else>
		    			<div class="pic" style="background:url(<%=basePath%>common/images/empty.PNG);"></div>
		    		</s:else>		
                    <div class="name"><p style="width:170px; overflow:hidden;white-space:nowrap; text-overflow:ellipsis;-o-text-overflow:ellipsis; color:#FFF;" >${session.LOGIN_SESSION_BEAN.user_email }</p>
                    	<ul>
                        <li><a style="cursor:pointer;" onclick="show('<%=basePath%>');">修改密码</a></li>
                        <li><a href="<%=basePath%>user/logout">退出</a></li>
                        </ul>
                    </div>
                    <br />
                </div>
                <br />
            </div>
      </div>
	</body>
</html>

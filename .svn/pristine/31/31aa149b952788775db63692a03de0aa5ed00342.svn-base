//将编码转换成字符串
function getTextByCodes(codes, arraytext) {
	var arr = codes.split(",");
	var texts = "";
	for (var i = 0; i < arr.length; i++) {
		var code = arr[i];
		texts += "," + arraytext[code];
	}
	texts = texts.substring(1);
	return texts;
}


package seentao.xhsn.sys.trade.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.stereotype.Service;

import seentao.xhsn.bean.HsTradeBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.sys.trade.dao.ITradeDAO;
import seentao.xhsn.tools.Page;

/** 
 * @author wjx 
 * @date 2015年1月7日 下午2:15:45 
 * @note 
 */
@Service
public class TradeDAOImpl extends SqlSessionDaoSupport  implements ITradeDAO  {
	
	private SqlSession sqlSession;
	private DaoUtil daoUtil;

	public void initDao() {
		if (daoUtil == null) {
			sqlSession = sqlSession == null ? getSqlSession() : sqlSession;
			daoUtil = new DaoUtil(sqlSession);
		}
	}
	
	@Override
	public List<HsTradeBO> findAllTrade() {
		return daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsTradeBOMapper.selectByPram", new HsTradeBO());
	}

	@Override
	public HsTradeBO getByPK(String id) {
		return (HsTradeBO) daoUtil.selectByPK("seentao.xhsn.bean.mappers.HsTradeBOMapper.selectByPrimaryKey", id);
	}

	@Override
	public String insertTrade(HsTradeBO bo) {
		return daoUtil.insertBO("seentao.xhsn.bean.mappers.HsTradeBOMapper.insert", bo);
	}

	@Override
	public int updateTrade(HsTradeBO bo) {
		return daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsTradeBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public int deleteTrade(String id) {
		return daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsTradeBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public List<HsTradeBO> findAllTradeByPage(Page<HsTradeBO> page) {
		return daoUtil.selectByParam("seentao.xhsn.bean.mappers.HsTradeBOMapper.selectByPage", page);
	}

	
}

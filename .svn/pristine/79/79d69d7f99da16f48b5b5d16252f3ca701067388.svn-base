@charset "utf-8";
/* CSS Document */
#main{ width:21cm; margin:0 auto; padding-bottom:1.5cm;padding-top:1.5cm; position:relative;}
#main h2{ width:21cm; text-align:center; font-size:20px; line-height:42px;}
#main div{ width:19cm; background:#FFF; border-bottom:1px solid #e5e4e4; margin-bottom:10px; padding-bottom:10px; margin-left:1cm;}
#main div h4{ width:19cm; height:50px; position:relative;}
#main h4 a{ font-size:10px; color:#636262; position:absolute; left:976px; top:17px; font-weight:normal;}
#main div p{ margin-left:40px; line-height:1.8em;font-size:12px;margin-right:40px}
#main div p span{ margin-left:15px;}
.top_inner .logo,.top_inner .person{ float:left;}
.top_inner .logo { width:704px; height:83px;}
.top_inner .logo img,.top_inner .logo ul{ float:left;}
.top_inner .logo ul{ width:400px; margin-left:25px;}
.top_inner .logo ul li{ float:left; margin-left:20px;}
.top_inner .logo ul li a{ font-size:13px; color:#FFF; display:block;  line-height:83px;}
.top_inner .logo ul li .bold{ font-weight:bold; background:url(../../images/triangle.jpg) no-repeat bottom center;}
.top_inner .person{ width:320px; height:83px; line-height:83px; position:relative;}
.top_inner .person .pic{ float:left; width:42px; height:42px; border-radius:60px; background:url(../../images/kobe.jpg); margin-top:22px; margin-left:80px;}
.top_inner .person .name { float:left; width:180px; margin-left:15px; color:#FFF; white-space:nowrap; text-overflow:ellipsis;-o-text-overflow:ellipsis; position:relative; z-index:1000; background:url(../../images/triangle_up.png) right center no-repeat;}
.top_inner .person .name:hover ul { display:block;}
.top_inner .person .name ul{ position:absolute; display:none;}
.top_inner .person .name ul li a{ display:block; width:120px; padding-left:30px; height:26px; line-height:26px; background:#38ac96; color:#FFF;}
.top_inner .person .name ul li a:hover{ background:#a1d8ce;}
.top_inner .person .active{background:url(../../images/triangle_d.png) no-repeat right center;}
.top_inner .person .xl { position:absolute; left:210px; top:83px;}
.top_inner .person .xl li a{ display:block; width:78px; padding-left:30px; height:26px; line-height:26px; font-size:8px; color:#fdfdfd; background:#38ac96;}
.top_inner .person .xl li a:hover{ background:#a1d8ce;}


.transparent {
	left: 0;
	top: 0;
	position: absolute;
	filter: alpha(opacity = 50);
	-moz-opacity: 0.5;
	-khtml-opacity: 0.5;
	opacity: 0.5;
	background: #000;
	z-index: 10;
}

#tanchu {
	position: fixed;
	width: 832px;
	height: 494px;
	background: url(../images/tanchubg.png) no-repeat;
	z-index: 1000;
}

#tanchu h4 {
	height: 58px;
	position: relative;
}

#tanchu h4 a {
	display: block;
	width: 32px;
	height: 32px;
	background: url(../images/close.png) no-repeat;
	position: absolute;
	left: 762px;
	top: 14px;
}

.tanchu_inner {
	width: 582px;
	background: #FFF;
	margin-left: 125px;
	margin-top: 30px;
}

.tanchu_inner p {
	line-height: 50px;
	margin-left: 50px;
}


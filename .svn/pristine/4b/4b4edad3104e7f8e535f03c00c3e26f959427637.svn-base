$(document).ready(function(){
	switchTab(3);
	$("#exp_description").bind('input propertychange', function() {
		if($("#exp_description").val().length>500){
			$("#exp_descriptionTip").text("超过字数限制！");
			$("#exp_description").val($("#exp_description").val().substring(0,500));
		}
		if($("#exp_description").val().length<500){
			$("#exp_descriptionTip").text("");
		}
	}); 
});


function handleUpdateResponse(data){
	$("#key").val(data.bo.id);
	 $("#exp_proname").val(data.bo.exp_proname);
	 $("#exp_begintime").val(data.bo.exp_begintime);
	 $("#exp_endtime").val(data.bo.exp_endtime);
	 $("#duty_description").val(data.bo.duty_description);
	 $("#exp_description").val(data.bo.exp_description);
	}

function validate(){
	if($("#exp_proname").val().length==0){
		$("#errorTip").text("请输入项目名称!");
		return false;
	}
	if($("#exp_begintime").val().length==0){
		$("#errorTip").text("请选择开始时间!");
		return false;
	}
	if($("#exp_endtime").val().length==0){
		$("#errorTip").text("请选择结束时间!");
		return false;
	}
	return true;
}
	/**
	 * 根据用户Id和简历Id取得投放简历信息
	 * 
	 * @param user_id
	 * @param res_id
	 * @return
	 */
	public List<HsPutresumeBO> findByUserIdAndResId(String user_id, String res_id);
	
	/**
	 * 将解析之后的文件内容返回字符串
	 * @param templetPath
	 * @param data
	 * @param context
	 * @return
	 */
	public String getHtmlTopByTemplet(String templetPath,Map<String,Object> data, ServletContext context);

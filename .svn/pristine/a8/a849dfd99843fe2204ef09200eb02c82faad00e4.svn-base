$(document).ready(function(){
	
	
	$('#person_pwd').focus(function(){
		$('.mima').css('display','none')
	});
	$('#person_pwd').blur(function(){
		if($('#person_pwd').val()!=""){
			$('.mima').css('display','none');
		}else{
			$('.mima').css('display','block');
		}
	});
	$('#person_pwd2').focus(function(){
		$('.mima2').css('display','none')
	});
	$('#person_pwd2').blur(function(){
		if($('#person_pwd2').val()!=""){
			$('.mima2').css('display','none');
		}else{
			$('.mima2').css('display','block');
		}
	});
	$("#person_pwd").focus();
});


function validatePwd(){
	var value = $("#person_pwd").val();
	var element = $("#perpwd_tip");
	if (value.length==0) {
		var tip="密码不能为空!";
		element.text(tip);
		element.attr("title",tip);
		return false;
	}
	element.text("");
	element.attr("title","");
	return true;
}

function validatePwd2(){
	var value = $("#person_pwd").val();
	var value2 = $("#person_pwd2").val();
	var element = $("#perpwd_tip2");
	if (value2.length==0) {
		var tip="确认密码不能为空!";
		element.text(tip);
		element.attr("title",tip);
		return false;
	}
	if (value != value2) {
		var tip="两次密码不一致!";
		element.text(tip);
		element.attr("title",tip);
		return false;
	}
	element.text("");
	element.attr("title","");
	return true;
}

function formsub(){
	var pswd = $("#person_pwd").val();
	var pswd2 = $("#person_pwd2").val();
	if(validatePwd() & validatePwd2()){
		document.getElementById("myForm").submit();
	}
}




package seentao.xhsn.sys.city.dao;

import java.util.List;

import seentao.xhsn.bean.HsCityBO;

/**
 * @Description:城市管理操作DAO接口
 * @author niushixing 2015-1-7 13:54:07
 */
public interface ICityDAO {

	/**
	 * 新增
	 * 
	 * @param bo
	 */
	public void insert(HsCityBO bo);

	/**
	 * 修改
	 * 
	 * @param bo
	 */
	public void update(HsCityBO bo);

	/**
	 * 删除
	 * 
	 * @param id
	 */
	public void delete(String id);

	/**
	 * 根据主键查找
	 * 
	 * @param id
	 */
	public HsCityBO selectByPrimaryKey(String id);

	/**
	 * 根据条件查找
	 * 
	 * @param bo
	 */
	public List<HsCityBO> getAllByParam(HsCityBO bo);

	/**
	 * 取得省份列表
	 * 
	 * @return
	 */
	public List<HsCityBO> getProvinceList();

	/**
	 * 取得城市列表
	 * 
	 * @param provinceCode
	 * @return
	 */
	public List<HsCityBO> getCityList(String provinceCode);

	/**
	 * 搜索是否存在
	 * 
	 * @param bo
	 * @return
	 */
	public List<HsCityBO> selectExists(HsCityBO bo);
}
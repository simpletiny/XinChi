@charset "utf-8";
/* CSS Document */
input{ width:224px; height:63px; line-height:63px;font-size:32px; text-align:center; cursor:pointer; margin-top:70px;}
#banner{ width:100%; height:508px; background:url(../images/index_banner.jpg) no-repeat center;}
.banner_inner{ width:1024px; margin:0 auto;}
.banner_inner .loginbt{background:#ffae00; color:#FFF;}
.banner_inner .loginbt:hover{ background:#ffc000;}
.banner_inner .registerbt{ background-color:transparent;color:#FFF; margin-left:35px; border:2px solid #FFF; line-height:60px;}
.banner_inner .registerbt:hover{border:2px solid #ffae00; color:#ffc000;}
#introduction{ width:100%; background:#f5f5f5; padding:75px 0px 75px 0px;}
.introduction_inner { width:1029px; margin:0 auto;}
.introduction_inner div { float:left; width:221px; padding-left:120px; height:110px; padding-top:20px; border:1px dashed #8b8b8b;}
.introduction_inner div h4{font-size:20px; height:36px; color:#dd4012; font-weight:bold; padding-left:35px; vertical-align:top;}
.introduction_inner div ul{width:170px;}
.introduction_inner div ul li{font-size:12px; line-height:1.5em;}
#partners{ width:100%;background:#eaebe8;}
.partners_inner{ width:1124px; margin:0 auto; height:88px; line-height:88px; text-align:center;}
#partners img { margin-left:30px; margin-top:25px;}
#footer{ background:#38ac96;}
#footer a { color:#eaebe8; background:url(../images/line_index.jpg) no-repeat left center;}
#footer p{color:#eaebe8;}
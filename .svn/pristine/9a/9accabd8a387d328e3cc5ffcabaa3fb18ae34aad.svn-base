package seentao.xhsn.person.resumeother.action;

import java.util.ArrayList;
import java.util.List;
import java.util.Map;

import org.apache.commons.beanutils.PropertyUtils;
import org.apache.commons.lang3.StringUtils;
import org.apache.log4j.Logger;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import seentao.xhsn.bean.HsDictionaryDataBO;
import seentao.xhsn.bean.HsPersonLeftMenuBO;
import seentao.xhsn.bean.HsResumeOtherBO;
import seentao.xhsn.common.ResourcesConstants;
import seentao.xhsn.common.SeentaoApplicationContext;
import seentao.xhsn.common.SupperBO;
import seentao.xhsn.common.UserSessionBean;
import seentao.xhsn.exception.BusinessException;
import seentao.xhsn.person.resumeother.bean.HsResumeOtherExtendBO;
import seentao.xhsn.person.resumeother.service.IResumeOtherService;
import seentao.xhsn.sys.dictionaryfiledmap.service.IDictionaryFieldMapService;
import seentao.xhsn.sys.leftmenu.service.ILeftMenuService;

import com.opensymphony.xwork2.ActionSupport;


/**
 * @Description:其他信息填写和修改
 * @author 李君彦
 * @date 2014-11-24 下午3:07:41 
 * @version V1.0   
 */

@Controller
@Scope("prototype")
public class ResumeOtherAction extends ActionSupport{
	
	private static final long serialVersionUID = 1L;

	private Logger logger=Logger.getLogger(ResumeOtherAction.class);
	
	private HsResumeOtherExtendBO bo;
	
	private List<HsResumeOtherExtendBO> boList;
	
	private String tip;
	//是否继续新增
	private String isAdd;
	/**
	 * 当前左侧选中的菜单id
	 */
	private String lm_tab_name;
		
	/**
	 * 左侧菜单的集合
	 */
	private List<HsPersonLeftMenuBO> leftmenus;
		
	/**
	 * 简历完成度
	 */
	private String res_completeness;
	@Autowired
	private IResumeOtherService resumeOtherService;
	
	@Autowired
	private IDictionaryFieldMapService dictFieldMapService;
	@Autowired
	private ILeftMenuService lmService;
	
	private Map<String, List<HsDictionaryDataBO>> dicts;
	/**
	 * 新增
	 * @return
	 */
	public String saveResumeOther(){
		UserSessionBean bean = (UserSessionBean) SeentaoApplicationContext.getSession(ResourcesConstants.LOGIN_SESSION_KEY);
		bo.setRes_id(bean.getRes_id());
		bo.setUser_id(bean.getUser_sys_id());
		HsResumeOtherBO resumeOtherBO=new HsResumeOtherBO();
		this.copyProperties(resumeOtherBO, bo);
		if(StringUtils.isNotEmpty(bo.getId()))
			resumeOtherService.update(resumeOtherBO);
		else
			resumeOtherService.insert(resumeOtherBO);
		return "SUCCESS";
	}
	
	
	public String updateResumeOther(){
		resumeOtherService.update(bo);
		return "SUCCESS";
	}
	
	public String delResumeOther(){
		resumeOtherService.delResumeOther(bo.getId());
		return "SUCCESS";
	}
	
	public String findResumeOther(){
		HsResumeOtherBO resumeOtherBO = resumeOtherService.selectByPrimaryKey(bo.getId());
		dicts = dictFieldMapService.findDictDataByParam(bo.getTable_name());
		this.copyProperties(bo,resumeOtherBO); 
		if(StringUtils.isNotEmpty(resumeOtherBO.getTitle())){
			Map<String, String> title = dictFieldMapService.getDictValueByParam(bo.getTable_name(), "title", resumeOtherBO.getTitle());
			bo.setTitle_value(title.get("value"));
		}
		lm_tab_name = bo.getTable_name();
		return "SUCCESS";
	}
	
	public String findAllResumeOther(){
		HsResumeOtherBO paramBO=new HsResumeOtherBO();
		UserSessionBean sessionBean=(UserSessionBean) SeentaoApplicationContext.getSession(ResourcesConstants.LOGIN_SESSION_KEY);
		paramBO.setRes_id(sessionBean.getRes_id());
		paramBO.setUser_id(sessionBean.getUser_sys_id());
		 List<HsResumeOtherBO> list = resumeOtherService.getAllByParam(paramBO);
		 HsResumeOtherExtendBO extendBO =null;
			boList=new ArrayList<HsResumeOtherExtendBO>();
			for(HsResumeOtherBO resumeOtherBO:list){
				extendBO=new HsResumeOtherExtendBO();
				this.copyProperties(extendBO, resumeOtherBO);
				Map<String, String> title = dictFieldMapService.getDictValueByParam(resumeOtherBO.getTable_name(), "title", resumeOtherBO.getTitle());
				extendBO.setTitle_value(title.get("value"));
				boList.add(extendBO);
			}
		dicts = dictFieldMapService.findDictDataByParam(paramBO.getTable_name());
		isAdd=isAdd==null?"n":isAdd;
		//菜单处理
		leftmenus = lmService.findLeftMenuByParams();
		// 获取简历完成度
		res_completeness = lmService.getCompletenessByPK();
		return "SUCCESS";
	}
	
	private void copyProperties(SupperBO dest, SupperBO src) {
		try {
			PropertyUtils.copyProperties(dest, src);
		} catch (Exception e) {
			logger.error("属性值拷贝失败",e);
			throw new BusinessException(e);
		}
	}

	public HsResumeOtherExtendBO getBo() {
		return bo;
	}


	public void setBo(HsResumeOtherExtendBO bo) {
		this.bo = bo;
	}


	public List<HsResumeOtherExtendBO> getBoList() {
		return boList;
	}


	public void setBoList(List<HsResumeOtherExtendBO> boList) {
		this.boList = boList;
	}


	public String getTip() {
		return tip;
	}

	public void setTip(String tip) {
		this.tip = tip;
	}

	public String getIsAdd() {
		return isAdd;
	}

	public void setIsAdd(String isAdd) {
		this.isAdd = isAdd;
	}

	public Map<String, List<HsDictionaryDataBO>> getDicts() {
		return dicts;
	}

	public void setDicts(Map<String, List<HsDictionaryDataBO>> dicts) {
		this.dicts = dicts;
	}

	public String getLm_tab_name() {
		return lm_tab_name;
	}


	public void setLm_tab_name(String lm_tab_name) {
		this.lm_tab_name = lm_tab_name;
	}


	public List<HsPersonLeftMenuBO> getLeftmenus() {
		return leftmenus;
	}


	public void setLeftmenus(List<HsPersonLeftMenuBO> leftmenus) {
		this.leftmenus = leftmenus;
	}


	public String getRes_completeness() {
		return res_completeness;
	}


	public void setRes_completeness(String res_completeness) {
		this.res_completeness = res_completeness;
	}
	
	
}
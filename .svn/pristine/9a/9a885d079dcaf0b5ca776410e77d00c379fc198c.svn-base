<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
 <%@taglib uri="/struts-tags" prefix="s" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
<title>新道人才网</title>
<link rel="stylesheet" type="text/css" href="<%=basePath%>common/css/basic.css"  />
<link rel="stylesheet" type="text/css" href="<%=basePath%>common/css/page.css"  />
<link rel="stylesheet" type="text/css" href="<%=basePath%>person/center/css/grzx.css"  />
<script src="<%=basePath%>common/js/jquery-1.8.1.min.js" type="text/javascript"></script>
<script src="<%=basePath%>person/center/js/center.js" type="text/javascript"></script>
<script src="<%=basePath%>common/js/pwd.js" type="text/javascript"></script>
<script src="<%=basePath%>common/js/jquery.pagination.js" type="text/javascript"></script>
<script src="<%=basePath%>common/js/funtype_arr.js" type="text/javascript"></script>
<script src="<%=basePath%>common/js/industry_arr.js" type="text/javascript"></script>
<script src="<%=basePath%>common/js/city_arr.js" type="text/javascript"></script>
</head>
<body>
	<div id="wrap">
	<div class="transparent"></div>
	<div id="tanchu" style="display:none">
		<h4>
			<a href="javascript:void" class="close"></a>
		</h4>
		<div class="tanchu_inner">
				<p>公司名称：<span id='ent_name'></span></p>
				<p>面试地址：<span id='ent_address'></span></p>
				<p>面试岗位：<span id='job_name' ></span></p>
				<p>联系人：<span id='interviewer'></span></p>
				<p>联系人电话：<span id='interviewer_phone'></span></p>
				<p>需带资料：<span id='attach'></span></p>
				<p>面试时间：<span id='inform_date'> </span></p>
		</div>
	</div>
    	<s:include value="../../common/page/head_person.jsp"></s:include>
      <div id="main">
      	<p class="dj">
        <a href="editubinfo?lm_tab_name=hs_userbasicinfo">【修改个人信息】</a>
        <%-- <a style="cursor:pointer;" onclick="show('<%=basePath%>');">【修改密码】</a>
        <a href="###">【帮助】</a> --%>
        <a href="<%=basePath%>user/logout">【退出】</a>
        </p>
        <div class="info">
        	<table width="1024" cellspacing="0px"  style="border-collapse:collapse; border:0; font-size:14px; color:#565555;">
            <tr>
            	<td width="224" rowspan="3" style="text-align:center;"><img src="${bean.imgPath }" style="height:149px;width:124px"/></td>
            	<td width="800" height="60"><span style="font-size:30px;">${bean.name}</span>你好，欢迎回到新道人才！</td>
            </tr>
            <tr>
            	<td width="800" height="60"><span style="font-size:24px;" id="span_desire_job">${bean.desire_job}</span><%--<a href="###">[修改职位名称］</a></td>--%>
            </tr>
            <tr>
            	<td width="800" height="60"><span>${bean.exp }</span><span>手机：${bean.cellphone }</span><span>邮箱：${bean.email }</span></td>
            </tr>
            </table>
            <table width="1024" cellspacing="0px"  style="border-collapse:collapse; margin-top:20px; text-align:center;">
            <tr>
            	<td width="340" height="80" style="border:1px solid #d0d1d1; border-left:none;">
                <p style="font-size:24px; color:#029e80;">${bean.visitorCnt }</p>
                <p><a href="javascript:void(0)" onclick="showContent('1')" style="font-size:16px; color:#029e80;">谁看了我的简历</a></p>
                </td>
            	<td width="340" style="border:1px solid #d0d1d1; border-left:none;">
                <p style="font-size:24px; color:#029e80;">${bean.applyCnt }</p>
                <p><a href="javascript:void(0)" onclick="showContent('2')" style="font-size:16px; color:#029e80;">职位申请记录</a></p>
                </td>
            	<td width="344" style="border:1px solid #d0d1d1; border-left:none; border-right:none;">
                <p style="font-size:24px; color:#029e80;">${bean.letterCnt }</p>
                <p><a href="javascript:void(0)" onclick="showContent('3')" style="font-size:16px; color:#029e80;">人事经理来信</a></p>
                </td>
            </tr>
            </table>
            <a href="javascript:void(0)" onclick="refresh()" style=" display:block;cursor:pointer; position:absolute; left:745px; top:40px; width:61px; height:26px; background:url(../person/center/images/sx.png);"></a>            
            <a href="javascript:void(0)" onclick="resumeReview()" style=" display:block; cursor:pointer;position:absolute; left:830px; top:40px; width:67px; height:26px; background:url(../person/center/images/yl.png);"></a>
            <a href="editubinfo?lm_tab_name=hs_userbasicinfo" style=" display:block; cursor:pointer;position:absolute; left:920px; top:37px; width:59px; height:29px; background:url(../person/center/images/xg.png);"></a>
        </div>
        <div class="info" id="div_content">
        </div>
        <div id="Pagination" class="right flickr" style="margin-top:10px"></div>
       	<br/>
      </div>
    <s:include value="../../common/page/footer.jsp"></s:include>
    </div>
</body>
</html>

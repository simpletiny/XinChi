$(document).ready(function(){
	switchTab(3);
	$(" body").click(function(){
		$("#degree_selectbox").hide();
	});
	$("#edu_degree_value").click(function(e){
		if($("#degree_selectbox").css("display")=="none")
			$("#degree_selectbox").show();
		else
			$("#degree_selectbox").hide();
		e.stopPropagation();//阻止冒泡到body
	});
	$(".major").each(function(){
		for (var i in m_a){
			if(i==$(this).text()){
				$(this).text(m_a[i]);
				break;
			}
		}
	})
});

function pick(code,value) {
	$("#edu_degree_value").val(value);
 $("#edu_degree").val(code);
 $("#degree_selectbox").hide();
}

function handleUpdateResponse(data){
	$("#key").val(data.bo.id);
	 $("#edu_school_name").val(data.bo.edu_school_name);
	 $("#edu_begintime").val(data.bo.edu_begintime);
	 $("#edu_endtime").val(data.bo.edu_endtime);
	 for (var i in m_a){
			if(i==data.bo.main_major_code){
				$("#btn_MajorID_2").val(m_a[i]);
				break;
			}
		}
	 $("#MajorID_2").val(data.bo.main_major_code);
	 $("#edu_degree").val(data.bo.edu_degree);
	 $("#edu_degree_value").val(data.bo.edu_degree_value);
	 
	}

function validate(){
	if($("#edu_begintime").val().length==0){
		$("#errorTip").text("请选择开始时间!");
		return false;
	}
	if($("#edu_endtime").val().length==0){
		$("#errorTip").text("请选择结束时间!");
		return false;
	}
	if($("#edu_school_name").val().length==0){
		$("#errorTip").text("请输入学校名称!");
		return false;
	}
	if($("#MajorID_2").val().length==0){
		$("#errorTip").text("请选择专业类别!");
		return false;
	}
	if($("#edu_degree").val().length==0){
		$("#errorTip").text("请选择学历学位!");
		return false;
	}
	return true;
}
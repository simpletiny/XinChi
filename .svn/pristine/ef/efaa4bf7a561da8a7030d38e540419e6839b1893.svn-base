package seentao.xhsn.person.evaluate.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.stereotype.Service;

import seentao.xhsn.bean.HsEvaluateBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.person.evaluate.dao.IEvaluateDao;

/** 
 * @author wjx 
 * @date 2014年11月24日 下午3:52:32 
 * @note 个人评价的dao
 */
@Service
public class EvaluateDaoImpl extends SqlSessionDaoSupport implements IEvaluateDao {
	
	private SqlSession sqlSession;
	private DaoUtil daoUtil;

	public void initDao() {
		if (daoUtil == null) {
			sqlSession = sqlSession == null ? getSqlSession() : sqlSession;
			daoUtil = new DaoUtil(sqlSession);
		}
	}
	
	@Override
	public String insert(HsEvaluateBO bo) {
		return daoUtil.insertBO("seentao.xhsn.bean.mappers.HsEvaluateBOMapper.insert", bo);
	}

	@Override
	public int deleteByPK(String id) {
		return daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsEvaluateBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public int updateByPK(HsEvaluateBO bo) {
		return daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsEvaluateBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public HsEvaluateBO getEvaluateBoByPK(String id) {
		return (HsEvaluateBO) daoUtil.selectByPK("seentao.xhsn.bean.mappers.HsEvaluateBOMapper.selectByPrimaryKey", id);
	}

	@Override
	public List<HsEvaluateBO> findByUserIdAndResId(String user_id, String res_id) {
		HsEvaluateBO bo = new HsEvaluateBO();
		bo.setUser_id(user_id);
		bo.setRes_id(res_id);
		return daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsEvaluateBOMapper.selectByParam", bo);
	}

}

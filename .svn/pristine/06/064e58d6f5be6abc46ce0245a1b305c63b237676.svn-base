@charset "utf-8";
/* CSS Document */
#main {
	width: 1024px;
	margin: 0 auto;
	padding-bottom: 20px;
	position: relative;
}

#main h2 {
	width: 1024px;
	text-align: center;
	font-size: 30px;
	line-height: 60px;
}

#main div {
	width: 994px;
	background: #FFF;
	border-bottom: 1px solid #e5e4e4;
	margin-bottom: 10px;
	padding-bottom: 10px;
	padding-right: 30px;
}

#main div h4 {
	width: 1024px;
	height: 50px;
}

#main div p {
	margin-left: 70px;
	line-height: 1.8em;
}

#main div p span {
	margin-left: 15px;
}

.transparent {
	left: 0;
	top: 0;
	position: absolute;
	filter: alpha(opacity = 50);
	-moz-opacity: 0.5;
	-khtml-opacity: 0.5;
	opacity: 0.5;
	background: #000;
	z-index: 10;
}

#tanchu {
	position: fixed;
	width: 832px;
	height: 494px;
	background: url(../images/tanchubg.png) no-repeat;
	z-index: 1000;
}

#tanchu h4 {
	height: 58px;
	position: relative;
}

#tanchu h4 a {
	display: block;
	width: 32px;
	height: 32px;
	background: url(../images/close.png) no-repeat;
	position: absolute;
	left: 762px;
	top: 14px;
}

.tanchu_inner {
	width: 582px;
	background: #FFF;
	margin-left: 125px;
	margin-top: 30px;
}

.tanchu_inner p {
	line-height: 50px;
	margin-left: 50px;
}
@charset "utf-8";
/* CSS Document */
a {text-decoration:none; font-size:14px;}
a { blr:expression(this.onFocus=this.blur()) } /*针对 IE*/
a { outline:none; } /*针对firefox等*/
body,div,ul,li { padding: 0; margin: 0; }
img { border: none; }
*{ margin:0; padding:0; font-family:"微软雅黑",Arial; font-size:14px; color:#636262;}
ul,ol,li{list-style:none;}
br{clear:both; font-size:0; line-height:0;}
input,textarea{ border:none; margin:0px; overflow:hidden;}
body{ background:#f5f5f5;}
#wrap{ width:100%;}
#top{ width:100%; background:#38ac96; margin-bottom:20px;}
.top_inner{ width:1024px; margin:0 auto;}
.top_inner .logo,.top_inner .person{ float:left;}
.top_inner .logo { width:704px; height:83px;}
.top_inner .logo img,.top_inner .logo ul{ float:left;}
.top_inner .logo ul{ width:530px; margin-left:25px;}
.top_inner .logo ul li{ float:left; margin-left:20px;}
.top_inner .logo ul li a{ font-size:18px; color:#FFF; display:block;  line-height:83px;}
.top_inner .logo ul li .bold{ font-weight:bold; background:url(../images/top/triangle.jpg) no-repeat bottom center;}
.top_inner .person{ width:320px; height:83px; line-height:83px; position:relative;}
.top_inner .person .pic{ float:left; width:42px; height:42px; border-radius:60px;  margin-top:22px; margin-left:80px;}
.top_inner .person .name { float:left; width:180px; margin-left:15px; color:#FFF; white-space:nowrap; text-overflow:ellipsis;-o-text-overflow:ellipsis; position:relative; background:url(../images/top/triangle_up.png) no-repeat right center;}
.top_inner .person .name:hover ul { display:block;}
.top_inner .person .name ul{ position:absolute; top:63px; display:none;}
.top_inner .person .name ul li a{ display:block; width:120px; padding-left:30px; height:26px; line-height:26px; background:#38ac96; color:#FFF;}
/*.top_inner .person .name ul li a:hover{ background:#a1d8ce;}*/
.top_inner .person .active{background:url(../images/top/triangle_d.png) no-repeat right center;}
.top_inner .person .xl { position:absolute; left:210px; top:83px;}
.top_inner .person .xl li a{ display:block; width:78px; padding-left:30px; height:26px; line-height:26px; font-size:12px; color:#fdfdfd; background:#38ac96;}
.top_inner .person .xl li a:hover{ background:#a1d8ce;}
.nian{width:82px; height:33px; line-height:33px; vertical-align:middle;}
.yue{width:54px; height:33px; line-height:33px; vertical-align:middle;}
#footer{ width:100%; height:54px; padding-top:24px; background:#e8e7e7; text-align:center;}
#footer a{ font-size:12px; color:#b6b5b5; padding:0 10px; background:url(../images/line.jpg) no-repeat left center;}
#footer a:first-child{ background:none;}
#footer p{ font-size:12px; color:#b6b5b5;}
#main {
	width: 1024px;
	margin: 0 auto;
	margin-bottom: 16px;
}

 #main .info {
	float: left;
}
#main .info {
	width: 780px;
}
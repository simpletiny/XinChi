package seentao.xhsn.person.info.dao;

import seentao.xhsn.bean.HsUserbasicinfoBO;

/** 
 * @author wjx 
 * @date 2014年11月26日 上午11:15:07 
 * @note 个人信息dao
 */
public interface IUBInfoDao {
	
	/**插入一条信息，返回主键id
	 * @param bo 需要插入的对象
	 * @return id
	 */
	public String inster(HsUserbasicinfoBO bo);
	
	/**
	 * 根据id修改个人信息
	 * @param bo 个人信息
	 * @return 影响的行数
	 */
	public int update(HsUserbasicinfoBO bo);

	/**根据id获取用户信息
	 * @param id 主键
	 * @return 用户当前信息
	 */
	public HsUserbasicinfoBO getByPK(String id);
	
	/**
	 * 根据系统用户id和简历id获取当前用户的信息
	 * @param user_id 系统用户id
	 * @return 用户当前信息
	 */
	
	public HsUserbasicinfoBO getByUserSysId(String user_sys_id);

	
	
}

package seentao.xhsn.enterprise.index.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.stereotype.Repository;

import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.enterprise.index.bean.EntTopBean;
import seentao.xhsn.enterprise.index.dao.IEntIndexDao;

/**
 * 
 * @author niushixing 2015-1-6 09:38:51
 *
 */
@Repository
public class EntIndexDaoImpl extends SqlSessionDaoSupport implements IEntIndexDao {
	private SqlSession sqlSession;
	private DaoUtil daoUtil;

	public void initDao() {
		if (daoUtil == null) {
			sqlSession = sqlSession == null ? getSqlSession() : sqlSession;
			daoUtil = new DaoUtil(sqlSession);
		}
	}

	@Override
	public EntTopBean selectTopCnt(String ent_id) {
		EntTopBean top = new EntTopBean();
		top.setEtp_id(ent_id);
		List<EntTopBean> list = daoUtil.selectByParam(
				"seentao.xhsn.bean.mappers.HsEnterpriseBOMapper.selectEntIndexTopCnt", top);
		if (list != null && list.size() > 0) {
			return list.get(0);
		} else {
			return null;
		}
	}

}

package seentao.xhsn.sys.dictionaryfiledmap.service.impl;

import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import seentao.xhsn.bean.HsDictionaryDataBO;
import seentao.xhsn.sys.dictionaryfiledmap.dao.IDictionaryFieldMapDao;
import seentao.xhsn.sys.dictionaryfiledmap.service.IDictionaryFieldMapService;

/** 
 * @author wjx 
 * @date 2014年11月28日 下午2:02:14 
 * @note 
 */
@Service
public class DictionaryFieldMapServiceImpl implements IDictionaryFieldMapService {
	
	
	@Autowired
	private IDictionaryFieldMapDao dao ;
	
	@Override
	public Map<String, List<HsDictionaryDataBO>> findDictDataByParam(String tablename) {
		return dao.findByParam(tablename);
	}

	@Override
	public Map<String, String> getDictValueByParam(String tablename, String fieldname, String dict_code) {
		return dao.getDictByParam(tablename, fieldname, dict_code);
	}

}

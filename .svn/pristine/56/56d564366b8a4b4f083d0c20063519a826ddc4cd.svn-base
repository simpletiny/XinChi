package seentao.xhsn.person.experience.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.stereotype.Repository;

import seentao.xhsn.bean.HsResumejobexperienceBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.person.experience.dao.IExperienceDAO;


@Repository
public class ExperienceDAOImpl extends SqlSessionDaoSupport implements IExperienceDAO{

	private SqlSession sqlSession;
	private DaoUtil daoUtil;
	public void initDao(){
		if(daoUtil==null){
			sqlSession=sqlSession==null?getSqlSession():sqlSession;
			daoUtil=new DaoUtil(sqlSession);
		}
	}
	
	@Override
	public void insert(HsResumejobexperienceBO bo) {
		daoUtil.insertBO("seentao.xhsn.bean.mappers.HsResumejobexperienceBOMapper.insert", bo);
	}

	@Override
	public void update(HsResumejobexperienceBO bo) {
		daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsResumejobexperienceBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public void delete(String id) {
		daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsResumejobexperienceBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public HsResumejobexperienceBO selectByPrimaryKey(String id) {
		return (HsResumejobexperienceBO) daoUtil.selectByPK("seentao.xhsn.bean.mappers.HsResumejobexperienceBOMapper.selectByPrimaryKey", id);
	}

	@Override
	public List<HsResumejobexperienceBO> getAllByParam(HsResumejobexperienceBO bo) {
		List<HsResumejobexperienceBO> list=daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsResumejobexperienceBOMapper.selectByParam", bo);
		return list;
	}

	@Override
	public List<HsResumejobexperienceBO> findByUserIdAndResId(String user_id, String res_id) {
		HsResumejobexperienceBO bo = new HsResumejobexperienceBO();
		bo.setUser_id(user_id);
		bo.setRes_id(res_id);
		List<HsResumejobexperienceBO> list=daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsResumejobexperienceBOMapper.selectByParam", bo);
		return list;
	}
	
}
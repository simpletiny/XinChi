<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
 <%@taglib uri="/struts-tags" prefix="s" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="Cache-Control" CONTENT="no-store">
<meta http-equiv="expires" content="0">  
<title>新道人才网</title>
<base href="<%=basePath%>" />
<link rel="stylesheet" type="text/css" href="common/css/basic.css"  />
<link rel="stylesheet" type="text/css" href="person/education/css/education.css"  />
<script src="common/js/jquery-1.8.1.min.js" type="text/javascript"></script>
<script src="common/js/layer-v1.8.1/layer/layer.min.js"></script>
<script type="text/javascript" src="common/js/drag.js"></script>
<script type="text/javascript" src="common/js/major_arr.js"></script>
<script type="text/javascript" src="common/js/major_func.js"></script>
 <script type="text/javascript" src="<%=basePath%>common/js/WdatePicker/WdatePicker.js"></script>
 <script src="common/js/common.js" type="text/javascript"></script>
 <script src="person/education/js/education.js" type="text/javascript"></script>
</head>
<body>
	<div id="wrap">
   	  <jsp:include page="/common/page/head_person.jsp" />
		<jsp:include page="/common/page/hint_person.jsp" />
      <div id="main">
      	<jsp:include page="/common/page/leftmenu_person.jsp" />
      	<div class="info">
        	<h4 class="gr">
            <a style="cursor:pointer;" onclick="add('info_inner');"></a>
            </h4>
            <s:if test="boList!=null&&boList.size()>0">
            <div class="info_inner1" >
            	<s:iterator id="bean" value="boList"> 
            	<div class="jl_inner">
                	<table width="775" cellspacing="0px"  style="border-collapse:collapse; border:0; color:#636262;">
                    <tr>
                    	<td width="500" height="30" style="padding-left:15px;"><span>${bean.edu_school_name }</span>
                    		<span>${bean.edu_degree_value}</span><span style="background:none;" class="major">${bean.main_major_code}</span></td>
                    	<td width="275">${bean.edu_begintime } 至  ${bean.edu_endtime }</td>
                    </tr>
                    
                    <tr>
                    	<td colspan="2"  width="500" height="30" style="padding-left:35px;text-align:right;padding-right: 10px;">
                    	<a onclick="update('info_inner','person/findEducation','bo.id=${bean.id }')" style="cursor:pointer;font-size:14px; color:#636262; padding-right:10px; background:url(person/education/images/spanbg_s.jpg) no-repeat right center; margin-right:10px;">编辑</a>
                    	<a onclick="deleteBo('person/delEducation','bo.id=${bean.id }')" style="cursor:pointer;font-size:14px; color:#636262;">删除</a></td>
                    </tr>
                    </table>
                </div>
                </s:iterator>
            </div>
            </s:if>
            <div class="info_inner"
            	<s:if test='boList!=null&&boList.size()>0&&isAdd!="y"'>
	            		style="display:none"
	            	</s:if> 
            >
            <form id="myForm" action="person/saveEducation" method="post">
            	<span id="errorTip" style="color:red"></span>
            	<input type="hidden" value="" id="key" name="bo.id">
            	<table width="740" cellspacing="0px"  style="border-collapse:collapse; border:0; color:#6d6e71;">
                	<tr>
                        <td width="145" height="48" style="padding-left:30px;background:url(common/images/red.png) no-repeat left center;">时间：</td>
                    	<td colspan="2"  style="text-align:left; position:relative;">
                        <input readonly id="edu_begintime" name="bo.edu_begintime" type="text" id="datepicker"  onClick="WdatePicker({dateFmt:'yyyy-MM',maxDate:'#F{$dp.$D(\'edu_endtime\')||\'%y-%M\'}'})" 
                       		style="width: 82px; height: 33px; 
								line-height: 33px; background: url(common/images/nian.jpg) repeat-x; 
								margin-right: 10px; text-align: center; font-size: 16px;"/> 
								至
							<input readonly id="edu_endtime" name="bo.edu_endtime" type="text" id="datepicker"  onClick="WdatePicker({dateFmt:'yyyy-MM',minDate:'#F{$dp.$D(\'edu_begintime\')}'})" 
                       		style="width: 82px; height: 33px; 
								line-height: 33px; background: url(common/images/nian.jpg) repeat-x; 
								margin-right: 10px; text-align: center; font-size: 16px;"/> 
                        </td>
                    </tr>
                    <tr>
                        <td width="145" height="48" style="background:url(common/images/red.png) no-repeat left center; padding-left:30px;">学校名称：</td>
                    	<td colspan="2"  style="text-align:left;">
                        <input id="edu_school_name" name="bo.edu_school_name" type="text" style=" width:420px; padding-left:5px; height:33px; line-height:33px; background:url(common/images/big_input.jpg) no-repeat; font-size:14px;"/>
                        </td>
                    </tr>
                    <tr>
                        <td width="145" height="48" style="background:url(common/images/red.png) no-repeat left center; padding-left:30px;">专业类别：</td>
                    	<td colspan="2"  style="text-align:left;">
                    	<input id="MajorID_2" type="hidden" name="bo.main_major_code" value="" />
	<input id="btn_MajorID_2" name="bo.main_major_code_value" type="button" value="请选择专业" onclick="majorSelect_2()" style="text-align:left;" />
    
                        </td>
                    </tr>
                    <tr>
                        <td width="145" height="48"  style="background:url(common/images/red.png) no-repeat left center; padding-left:30px;">学历学位：</td>
                    	<td colspan="2"  style="text-align:left; position:relative;">
                        	<input type="hidden" name="bo.edu_degree" id="edu_degree"/>
                        	<input readonly id="edu_degree_value" name="bo.edu_degree_value"  type="text" style="background:url(common/images/select.jpg) no-repeat;width:195px; padding-left:3px;height:35px; line-height:35px; border:none;cursor:pointer; font-size:14px;" class="xuewei"/>
                           		<div id="degree_selectbox" style="display: none; position:absolute; left:0px; top:40px; width:196px; background:#FFF; " class="bm">
									<s:iterator id="dic" value="dicts.education_degree">
										<span   onclick="pick('${dictionary_code }','${value }')"  class="cur">${value }</span>
									</s:iterator>
							</div>
                           		
                        </td>
                    </tr>
                    <tr>
                        <td width="145" height="98" style="padding-left:30px;"></td>
                    	<td width="275"  style="text-align:right;">
                        <input onclick="saveAndAdd('person/saveEducation','<%=basePath%>person/findAllEducation?lm_tab_name=${lm_tab_name}');" type="button" value="保存并新增" style="width:112px; height:34px; background:#fea201; color:#FFF; cursor:pointer; font-size:16px; margin-right:20px;" />
                        </td>
                        <td width="320">
                        	<input onclick="save('person/saveEducation','<%=basePath%>person/findAllEducation?lm_tab_name=${lm_tab_name}');" type="button" value="保 存" style="width:112px; height:34px; background:#fea201; color:#FFF; cursor:pointer; font-size:16px;" />
                            <input onclick="javascript:history.back();location.reload();" type="button" value="返 回" style="width:112px; height:34px; background:#ececec; color:#747171; cursor:pointer; font-size:16px; margin-left:20px;" />
                        </td>
                    </tr>
                </table>
                </form>
            </div>
        </div>
       <br  />
      </div>
      <jsp:include page="/common/page/footer.jsp" />
    </div>
    
    
    <!-- alpha div -->
<div id="maskLayer" style="display:none">
<iframe id="maskLayer_iframe" frameBorder=0 scrolling=no style="filter:alpha(opacity=50)"></iframe>
<div id="alphadiv" style="filter:alpha(opacity=50);-moz-opacity:0.5;opacity:0.5"></div>
	<div id="drag">
		<h3 id="drag_h"></h3>
		<div id="drag_con"></div><!-- drag_con end -->
	</div>
</div><!-- maskLayer end -->
</div>
<!-- alpha div end -->
<div id="sublist" style="display:none"></div>
</body>
</html>

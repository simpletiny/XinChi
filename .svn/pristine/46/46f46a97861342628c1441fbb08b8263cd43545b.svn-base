<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
 <%@taglib uri="/struts-tags" prefix="s" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
<title>新道人才网</title>
<base href="<%=basePath%>" />
<link rel="stylesheet" type="text/css" href="person/experience/css/experience.css"  />
<link rel="stylesheet" type="text/css" href="common/css/basic.css"  />
<script src="common/js/jquery-1.8.1.min.js" type="text/javascript"></script>
<script src="common/js/layer-v1.8.1/layer/layer.min.js"></script>
<script src="common/js/common.js" type="text/javascript"></script>
 <script type="text/javascript" src="<%=basePath%>common/js/WdatePicker/WdatePicker.js"></script>
<script src="person/experience/js/experience.js" type="text/javascript"></script>

</head>

<body>
	<div id="wrap">
   	  <jsp:include page="/common/page/head_person.jsp" />
		<jsp:include page="/common/page/hint_person.jsp" />
      <div id="main">
      	<jsp:include page="/common/page/leftmenu_person.jsp" />
      	<div class="info">
        	<h4 class="gr">
           <a style="cursor:pointer;" onclick="add('info_inner');"></a>
            </h4>
            <s:if test="boList!=null&&boList.size()>0">
            <div class="info_inner1">
            <s:iterator id="bean" value="boList"> 
            	 <p>${bean.exp_begintime}~~${bean.exp_endtime}<span>&nbsp;<b>${bean.exp_proname}</b></span></p>
	      			<p><b>项目中职责：</b> ${bean.exp_description}</p>
	      			<p style="padding-top: 5px;"><b>项目     描述：</b> ${bean.duty_description}</p>
	      			<p style="text-align:right;padding-right: 10px;">
                    	<a onclick="update('info_inner','person/findExperience','bo.id=${bean.id }')" style="cursor:pointer;font-size:14px; color:#636262; padding-right:10px; background:url(person/experience/images/spanbg_s.jpg) no-repeat right center; margin-right:10px;">编辑</a>
                    	<a onclick="deleteBo('person/delExperience','bo.id=${bean.id }')" style="cursor:pointer;font-size:14px; color:#636262;">删除</a></td>
                    </p>
                </div>
                </s:iterator>
            </div>
            </s:if>
            <div class="info_inner"
            	<s:if test='boList!=null&&boList.size()>0&&isAdd!="y"'>
	            		style="display:none"
	            	</s:if> 
            >
            	 <form id="myForm" action="person/saveTraining" method="post">
            	<span id="errorTip" style="color:red"></span>
            	<input type="hidden" value="" id="key" name="bo.id">
            	<table width="740" cellspacing="0px"  style="border-collapse:collapse; border:0; color:#6d6e71;">
                <tr>
                        <td width="145" height="48" style="background:url(common/images/red.png) no-repeat left center; padding-left:30px;">项目名称：</td>
                    	<td colspan="2"  style="text-align:left;">
                        <input id="exp_proname" name="bo.exp_proname" type="text" style=" width:420px; padding-left:5px; height:33px; line-height:33px; background:url(common/images/big_input.jpg) no-repeat; font-size:14px;"/>
                        </td>
                  </tr>
                	<tr>
                        <td width="145" height="48" style="padding-left:30px;background:url(common/images/red.png) no-repeat left center;">时间：</td>
                    	<td colspan="2"  style="text-align:left; position:relative;">
                        <input readonly id="exp_begintime" name="bo.exp_begintime" type="text" id="datepicker"  onClick="WdatePicker({dateFmt:'yyyy-MM',maxDate:'#F{$dp.$D(\'exp_endtime\')||\'%y-%M\'}'})" 
                       		style="width: 82px; height: 33px; 
								line-height: 33px; background: url(common/images/nian.jpg) repeat-x; 
								margin-right: 10px; text-align: center; font-size: 16px;"/> 
								至
							<input readonly id="exp_endtime" name="bo.exp_endtime" type="text" id="datepicker"  onClick="WdatePicker({dateFmt:'yyyy-MM',minDate:'#F{$dp.$D(\'exp_begintime\')}',maxDate:'%y-%M'})" 
                       		style="width: 82px; height: 33px; 
								line-height: 33px; background: url(common/images/nian.jpg) repeat-x; 
								margin-right: 10px; text-align: center; font-size: 16px;"/> 
                        </td>
                    </tr>
                    <tr>
                        <td width="145" style=" padding-left:30px; vertical-align:top;">项目中职责：</td>
                    	<td colspan="2"  style="text-align:left; padding-top:5px;">
                        	<textarea id="duty_description" name="bo.duty_description" cols="" rows="" style="width:557px; height:112px; padding:5px; background:url(common/images/textarea_2.jpg); font-size:14px; color:#636262; overflow:auto; overflow-x:hidden;"></textarea>
                          
                        </td>
                    </tr>
                    <tr>
                        <td width="145" style=" padding-left:30px; vertical-align:top; padding-top:15px;">项目描述：</td>
                    	<td colspan="2"  style="text-align:left; padding-top:15px;">
                        	<textarea id="exp_description" name="bo.exp_description" cols="" rows="" style="width:557px; height:112px; padding:5px; background:url(common/images/textarea_2.jpg); font-size:14px; color:#636262; overflow:auto; overflow-x:hidden;"></textarea>
                          <p id="exp_descriptionTip" style="color:red"></p>
                          <p style="font-size:12px;  margin-top:5px;">（限500个字）</p>
                        </td>
                    </tr>
                   <tr>
                        <td width="145" height="98" style="padding-left:30px;"></td>
                    	<td width="275"  style="text-align:right;">
                        <input onclick="saveAndAdd('person/saveExperience','<%=basePath%>person/findAllExperience?lm_tab_name=${lm_tab_name}');" type="button" value="保存并新增" style="width:112px; height:34px; background:#fea201; color:#FFF; cursor:pointer; font-size:16px; margin-right:20px;" />
                        </td>
                        <td width="320">
                        	<input onclick="save('person/saveExperience','<%=basePath%>person/findAllExperience?lm_tab_name=${lm_tab_name}');" type="button" value="保 存" style="width:112px; height:34px; background:#fea201; color:#FFF; cursor:pointer; font-size:16px;" />
                            <input onclick="javascript:history.back();location.reload();" type="button" value="返 回" style="width:112px; height:34px; background:#ececec; color:#747171; cursor:pointer; font-size:16px; margin-left:20px;" />
                        </td>
                    </tr>
                </table>
                </form>
            </div>
        </div>
       <br  />
      </div>
      <jsp:include page="/common/page/footer.jsp" />
    </div>
</body>
</html>

<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
 <%@taglib uri="/struts-tags" prefix="s" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="Cache-Control" CONTENT="no-store">
<meta http-equiv="expires" content="0">  
<title>新道人才网</title>
<link rel="stylesheet" type="text/css" href="<%=basePath%>common/css/basic.css"  />
<link rel="stylesheet" type="text/css" href="<%=basePath%>login/css/login.css"  />
<script src="<%=basePath%>common/js/jquery-1.8.1.min.js" type="text/javascript"></script>
<script src="<%=basePath%>common/js/layer-v1.8.1/layer/layer.min.js"></script>
<script src="<%=basePath%>share/findpassword/js/find_pswd.js" type="text/javascript"></script>
</head>

<body>
	<div id="wrap">
    	<jsp:include page="/common/page/head.jsp" />
        <div style='width:586px; height:568px; margin:0 auto; text-align:left;'>
        	<form name="myform" id="myform" method="post" action="">
        		<s:property value="tip"/>
				<p style="padding:5px;font-size:16px; margin-left:145px;">请输入邮箱：
					<input id="user_email" style="font-size:16px;height:32px;" name="bo.user_email"  />
					<span id="user_email_tip" style="width:200px;overflow:hidden; text-overflow:ellipsis; white-space:nowrap;color:red;font-size:11px" title="">&nbsp;</span>
				</p>
				<p style="padding:5px;font-size:16px;margin-left:145px;">验证码：
					<input id="verification_code" style="font-size:16px;height:32px; margin-left:32px;" name="bo.verification_code"  />
					<input  type="button" value="获取验证码"  onclick="sendEmail('<%=basePath%>share/sendEmailByFindPswd')" style="padding:5px; cursor:pointer;"  />
					<span id="verification_code_tip" style="width:200px;overflow:hidden; text-overflow:ellipsis; white-space:nowrap;color:red;font-size:11px" title="">&nbsp;</span>
				</p>
				<p style="padding:5px;" align="center">
					<input type="button" value="提交" onclick="formsub('<%=basePath%>share/validateEmailAndVerification')"  style="width:108px; margin-left:26px;height:30px; background:#fea201; cursor:pointer; font-size:20px; color:#FFF;"/>
				</p>
			</form>
		</div> 	
        <jsp:include page="/common/page/footer.jsp" />
    </div>
</body>
</html>
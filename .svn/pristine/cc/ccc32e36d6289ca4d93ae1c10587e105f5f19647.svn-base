@Controller
@Scope("prototype")
public class EducationAction{
	private Logger logger=Logger.getLogger(EducationAction.class);
	
	private HsEducationExtendBO bo;
	//是否继续新增
	private String isAdd;
	
	private List<HsEducationExtendBO> boList;
	/**
	 * 当前左侧选中的菜单id
	 */
	private String lm_tab_name;
		
	/**
	 * 左侧菜单的集合
	 */
	private List<HsPersonLeftMenuBO> leftmenus;
		
	/**
	 * 简历完成度
	 */
	private String res_completeness;
	
		@Autowired
	private ILeftMenuService lmService;
		
	@Autowired
	private IEducationService educationService;
	@Autowired
	private IDictionaryFieldMapService dictFieldMapService;
	
	private Map<String, List<HsDictionaryDataBO>> dicts;
	
	@Autowired
	private IResumeService resumeService;
	/**
	 * 新增
	 * @return
	 */
	public String saveEducation(){
		UserSessionBean bean = (UserSessionBean) SeentaoApplicationContext.getSession(ResourcesConstants.LOGIN_SESSION_KEY);
		bo.setRes_id(bean.getRes_id());
		bo.setUser_id(bean.getUser_sys_id());
		HsEducationBO educationBO=new HsEducationBO();
		this.copyProperties(educationBO, bo);
		if(StringUtils.isNotEmpty(bo.getId()))
			educationService.update(educationBO);
		else
			educationService.insert(educationBO);
		
		HsResumeBO resBo = resumeService.getByPk(bean.getRes_id());
		resumeService.generateEducation(resBo);
		return "SUCCESS";
	}
	
	public String updateEducation(){
		educationService.update(bo);
		UserSessionBean bean = (UserSessionBean) SeentaoApplicationContext.getSession(ResourcesConstants.LOGIN_SESSION_KEY);
		HsResumeBO resBo = resumeService.getByPk(bean.getRes_id());
		resumeService.generateEducation(resBo);
		return "SUCCESS";
	}
	
	public String delEducation(){
		educationService.delEducation(bo.getId());
		UserSessionBean bean = (UserSessionBean) SeentaoApplicationContext.getSession(ResourcesConstants.LOGIN_SESSION_KEY);
		HsResumeBO resBo = resumeService.getByPk(bean.getRes_id());
		resumeService.generateEducation(resBo);
		return "SUCCESS";
	}
	
	public String findEducation(){
		HsEducationBO educationBO = educationService.selectByPrimaryKey(bo.getId());
		dicts = dictFieldMapService.findDictDataByParam(bo.getTable_name());
		this.copyProperties(bo,educationBO); 
		if(StringUtils.isNotEmpty(educationBO.getEdu_degree())){
			Map<String, String> degree = dictFieldMapService.getDictValueByParam(bo.getTable_name(), "edu_degree", educationBO.getEdu_degree());
			bo.setEdu_degree_value(degree.get("value"));
		}
		lm_tab_name = bo.getTable_name();
		return "SUCCESS";
	}
	
	public String findAllEducation(){
		HsEducationBO paramBO=new HsEducationBO();
		UserSessionBean sessionBean=(UserSessionBean) SeentaoApplicationContext.getSession(ResourcesConstants.LOGIN_SESSION_KEY);
		paramBO.setRes_id(sessionBean.getRes_id());
		paramBO.setUser_id(sessionBean.getUser_sys_id());
		List<HsEducationBO> list = educationService.getAllByParam(paramBO);
		dicts = dictFieldMapService.findDictDataByParam(paramBO.getTable_name());
		HsEducationExtendBO extendBO =null;
		boList=new ArrayList<HsEducationExtendBO>();
		for(HsEducationBO educationBO:list){
			extendBO=new HsEducationExtendBO();
			this.copyProperties(extendBO, educationBO);
			Map<String, String> degree = dictFieldMapService.getDictValueByParam(educationBO.getTable_name(), "edu_degree", educationBO.getEdu_degree());
			extendBO.setEdu_degree_value(degree.get("value"));
			boList.add(extendBO);
		}
		isAdd=isAdd==null?"n":isAdd;
		leftmenus = lmService.findLeftMenuByParams();
		// 获取简历完成度
		res_completeness = lmService.getCompletenessByPK();
		return "SUCCESS";
	}
	/**
	 * 表单验证
	 */
	public void validateAddEducation(){
		
	}
	
	private void copyProperties(SupperBO dest, SupperBO src) {
		try {
			PropertyUtils.copyProperties(dest, src);
		} catch (Exception e) {
			logger.error("属性值拷贝失败",e);
			throw new BusinessException(e);
		}
	}
	
	public HsEducationExtendBO getBo() {
		return bo;
	}

	public void setBo(HsEducationExtendBO bo) {
		this.bo = bo;
	}
	
	public List<HsEducationExtendBO> getBoList() {
		return boList;
	}

	public void setBoList(List<HsEducationExtendBO> boList) {
		this.boList = boList;
	}
	
	public String getIsAdd() {
		return isAdd;
	}

	public void setIsAdd(String isAdd) {
		this.isAdd = isAdd;
	}

	public Map<String, List<HsDictionaryDataBO>> getDicts() {
		return dicts;
	}

	public void setDicts(Map<String, List<HsDictionaryDataBO>> dicts) {
		this.dicts = dicts;
	}
	
	public String getLm_tab_name() {
		return lm_tab_name;
	}

	public void setLm_tab_name(String lm_tab_name) {
		this.lm_tab_name = lm_tab_name;
	}

	public List<HsPersonLeftMenuBO> getLeftmenus() {
		return leftmenus;
	}

	public void setLeftmenus(List<HsPersonLeftMenuBO> leftmenus) {
		this.leftmenus = leftmenus;
	}

	public String getRes_completeness() {
		return res_completeness;
	}

	public void setRes_completeness(String res_completeness) {
		this.res_completeness = res_completeness;
	}
}
<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
 <%@taglib uri="/struts-tags" prefix="s" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="Cache-Control" CONTENT="no-store">
<meta http-equiv="expires" content="0">  
<title>新道人才网</title>
<base href="<%=basePath%>" />
<link rel="stylesheet" type="text/css" href="person/resumeOther/css/other.css"  />
<link rel="stylesheet" type="text/css" href="common/css/basic.css"  />
<script src="common/js/jquery-1.8.1.min.js" type="text/javascript"></script>
<script src="common/js/layer-v1.8.1/layer/layer.min.js"></script>
<script src="common/js/common.js"></script>
<script src="person/resumeOther/js/other.js"></script>
</head>
<body>
	<div id="wrap">
    	<jsp:include page="/common/page/head_person.jsp" />
		<jsp:include page="/common/page/hint_person.jsp" />
      <div id="main">
      	<jsp:include page="/common/page/leftmenu_person.jsp" />
      	<div class="info">
        	<h4 class="gr">
            	<a style="cursor:pointer;" onclick="add('info_inner1');"></a>
            </h4>
            <s:if test="boList!=null&&boList.size()>0">
            	<div class="info_inner">
                	<div class="jl_inner">
                	<span style=' color:red;'><s:property value="tip"/></span>
	                	<table width="775" cellspacing="0px"  style="border-collapse:collapse; border:0; color:#636262;">
	                    
		    				<s:iterator id="bean" value="boList"> 
			                    <tr>
			                    	<td width="775" height="30" style="vertical-align:text-bottom;" class="titledictd">
			                    	<s:if test='#bean.other_title!=null&&#bean.other_title!=""'>
			                    		${bean.other_title }
			                    	</s:if>
                    				<s:else>
                    					${bean.title_value }
                    				</s:else>
			                    	</td>
			                    </tr>
			                    <tr>
			                    	<td style="vertical-align:text-bottom;padding-right: 10px;">描述：${bean.description }</td>
			                    </tr>
			                    <tr>
			                    	<td width="530" height="30" style="padding-left:80px;text-align:right;padding-right: 10px;">
			                    		<a  onclick="update('info_inner1','person/findResumeOther','bo.id=${bean.id }')" style="cursor:pointer;font-size:14px; color:#636262; padding-right:10px; background:url(common/images/spanbg_s.jpg) no-repeat right center; margin-right:10px;">编辑</a>
			                    		<a  onclick="deleteBo('person/delResumeOther','bo.id=${bean.id }')" style="cursor:pointer;font-size:14px; color:#636262;">删除</a></td>
			                   	  </tr>
			                  </s:iterator>
	                    </table>
	                </div>
	            </div>
	          </s:if> 	  
            <div class="info_inner1"  
            	<s:if test='boList!=null&&boList.size()>0&&isAdd!="y"'>
            		style="display:none"
            	</s:if> 	  
            >
            	 <form id="myForm" action="person/addOrUpdateResumeOther" method="post">
            	 	<input type="hidden" value="" id="key" name="bo.id" />
	            	<span style=' color:red;' id="errorTip"></span>
	            	<table width="745" cellspacing="0px"  style="border-collapse:collapse; border:0; color:#6d6e71;">
	                    <tr>
	                        <td height="45" style="background:url(common/images/red.png) no-repeat left center; width:100px; padding-left:25px;">标题：</td>
	                   	  <td width="620"  style="text-align:left; position:relative;">
	                   	  <input type="hidden" name="bo.title" id="title"/>
	                   	 
	                     	<input readonly id="title_value"  type="text" style="background:url(common/images/select.jpg) no-repeat;width:195px; padding-left:3px;height:35px; line-height:35px; border:none;cursor:pointer; font-size:14px;" class="am"/>
	                       <input  type="text" id="other_title" name="bo.other_title" style="display:none;" />
	                       <span id="tip" style="overflow:hidden; text-overflow:ellipsis; white-space:nowrap;color:red;font-size:11px" title=""></span>
    					
	                       <div id="selectbox" style="display: none; position:absolute; left:0px; top:40px; width:196px; background:#FFF; " class="bm">
								<s:iterator id="dic" value="dicts.resume_other">
									<span id="titledic${dictionary_code }"  onclick="pick('${dictionary_code }','${value }')"  class="cur">${value }</span>
								</s:iterator>
							</div>
	                      </td>
	                    </tr>
	                	<tr>
	                        <td style="width:100px; padding-left:25px; vertical-align:top; padding-top:10px;background:url(common/images/red.png) no-repeat left 17px;">描述：</td>
	                   	  <td width="620"  style="text-align:left; padding-top:5px;">
	                   	  	<textarea name="bo.description" id="description" cols="" rows="" style=" width:557px; height:121px; padding:5px; background:url(person/resumeOther/images/textarea.jpg) no-repeat; font-size:14px; color:#636262; margin-bottom:5px; overflow:auto; overflow-x:hidden;"></textarea>
	                   	  	<span id="destip" style="overflow:hidden; text-overflow:ellipsis; white-space:nowrap;color:red;font-size:11px" title=""></span>
    	
	                   	  	<br  />
	                   	  	<span style="font-size:12px; color:#636262; font-weight:normal;">（限500个字）</span></td>
	                    </tr>
	                    <tr>
	                        <td height="45" style="width:100px; padding-left:25px;"></td>
	                   	  <td width="620"  style="text-align:left; padding-top:10px;">
	                   	  		<input value="保存并新增" onclick="saveAndAdd('person/saveResumeOther','<%=basePath%>person/findAllResumeOther?lm_tab_name=${lm_tab_name}');" name="" type="button" style=" width:112px; height:34px; line-height:34px; font-size:16px; padding:0px; color:#fdfdfd; background:#fea201; cursor:pointer; margin-left:180px; margin-right:25px;" />
	                   	  		<input value="保  存" onclick="save('person/saveResumeOther','<%=basePath%>person/findAllResumeOther?lm_tab_name=${lm_tab_name}');" type="button" style=" width:112px; height:34px; line-height:34px; font-size:16px; padding:0px; color:#fdfdfd; background:#fea201; cursor:pointer; margin-right:25px;" />
	                   	  		<input value="返 回" onclick="javascript:history.back();location.reload();" type="button" style=" width:112px; height:34px; line-height:34px; font-size:16px; color:#747171; background:#ececec; cursor:pointer; padding-left:0px;" />
	                   	  	</td>
	                    </tr>
	                 </table>
	               </form>  
            </div>
        </div>
        <br />
      </div>
     <jsp:include page="/common/page/footer.jsp" />
    </div>
</body>
</html>

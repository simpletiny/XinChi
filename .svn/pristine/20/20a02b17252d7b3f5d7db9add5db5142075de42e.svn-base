package seentao.xhsn.person.train.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.stereotype.Repository;

import seentao.xhsn.bean.HsTrainingBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.person.train.dao.ITrainingDAO;

@Repository
public class TrainingDAOImpl extends SqlSessionDaoSupport implements ITrainingDAO {

	private SqlSession sqlSession;
	private DaoUtil daoUtil;

	public void initDao() {
		if (daoUtil == null) {
			sqlSession = sqlSession == null ? getSqlSession() : sqlSession;
			daoUtil = new DaoUtil(sqlSession);
		}
	}

	@Override
	public void insert(HsTrainingBO bo) {
		daoUtil.insertBO("seentao.xhsn.bean.mappers.HsTrainingBOMapper.insert", bo);
	}

	@Override
	public void update(HsTrainingBO bo) {
		daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsTrainingBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public void delete(String id) {
		daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsTrainingBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public HsTrainingBO selectByPrimaryKey(String id) {
		return (HsTrainingBO) daoUtil.selectByPK("seentao.xhsn.bean.mappers.HsTrainingBOMapper.selectByPrimaryKey", id);
	}

	@Override
	public List<HsTrainingBO> getAllByParam(HsTrainingBO bo) {
		List<HsTrainingBO> list = daoUtil.selectByBOParamT(
				"seentao.xhsn.bean.mappers.HsTrainingBOMapper.selectByParam", bo);
		return list;
	}

	@Override
	public List<HsTrainingBO> findByUserIdAndResId(String user_id, String res_id) {
		HsTrainingBO bo = new HsTrainingBO();
		bo.setUser_id(user_id);
		bo.setRes_id(res_id);
		List<HsTrainingBO> list = daoUtil.selectByBOParamT(
				"seentao.xhsn.bean.mappers.HsTrainingBOMapper.selectByParam", bo);
		return list;
	}

}
package seentao.xhsn.sys.seentaotask.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Repository;

import seentao.xhsn.bean.HsTaskBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.sys.seentaotask.dao.ISeenTaoTaskDAO;


@Repository
@Scope("prototype")
public class SeenTaoTaskDAOImpl extends SqlSessionDaoSupport implements ISeenTaoTaskDAO{

	private SqlSession sqlSession;
	private DaoUtil daoUtil;
	public void initDao(){
		if(daoUtil==null){
			sqlSession=sqlSession==null?getSqlSession():sqlSession;
			daoUtil=new DaoUtil(sqlSession);
		}
	}
	
	@Override
	public void insert(HsTaskBO bo) {
		daoUtil.insertBO("seentao.xhsn.bean.mappers.HsTaskBOMapper.insert", bo);
	}

	@Override
	public void update(HsTaskBO bo) {
		daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsTaskBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public void delete(String id) {
		daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsTaskBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public HsTaskBO selectByPrimaryKey(String id) {
		return (HsTaskBO) daoUtil.selectByPK("seentao.xhsn.bean.mappers.HsTaskBOMapper.selectByPrimaryKey", id);
	}

	@Override
	public List<HsTaskBO> getAllByParam(HsTaskBO bo) {
		List<HsTaskBO> list=daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsTaskBOMapper.selectByParam", bo);
		return list;
	}
	
}
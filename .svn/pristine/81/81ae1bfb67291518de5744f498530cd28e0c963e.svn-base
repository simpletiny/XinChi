package seentao.xhsn.person.put.dao.impl;

import java.sql.Timestamp;
import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.stereotype.Service;

import seentao.xhsn.bean.HsPutresumeBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.enterprise.manageresume.bean.ManageResumeBean;
import seentao.xhsn.enterprise.resumesearch.bean.ResumeSearchBean;
import seentao.xhsn.person.put.dao.IPutResumeDAO;
import seentao.xhsn.tools.Page;

/**
 * @author wjx
 * @date 2014年12月4日 下午3:29:58
 * @note 投放简历DAO的实现类
 */
@Service
public class PutResumeDaoImpl extends SqlSessionDaoSupport implements IPutResumeDAO {
	private SqlSession sqlSession;
	private DaoUtil daoUtil;

	public void initDao() {
		if (daoUtil == null) {
			sqlSession = sqlSession == null ? getSqlSession() : sqlSession;
			daoUtil = new DaoUtil(sqlSession);
		}
	}

	@Override
	public String insert(HsPutresumeBO bo) {
		return daoUtil.insertBO("seentao.xhsn.bean.mappers.HsPutresumeBOMapper.insert", bo);
	}

	@Override
	public void update(HsPutresumeBO bo) {
		daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsPutresumeBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public void delete(String id) {
		daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsPutresumeBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public HsPutresumeBO selectByPrimaryKey(String id) {
		return (HsPutresumeBO) daoUtil.selectByPK("seentao.xhsn.bean.mappers.HsPutresumeBOMapper.selectByPrimaryKey",
				id);
	}

	@Override
	public List<HsPutresumeBO> findByUserIdAndResId(String user_id, String res_id) {
		HsPutresumeBO bo = new HsPutresumeBO();
		bo.setUser_id(user_id);
		bo.setRes_id(res_id);

		return daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsPutresumeBOMapper.selectByParam", bo);
	}

	@Override
	public int getPutCnt(String user_id, String res_id) {
		HsPutresumeBO bo = new HsPutresumeBO();
		bo.setUser_id(user_id);
		bo.setRes_id(res_id);
		return (Integer)daoUtil.selectOneValueByParam("seentao.xhsn.bean.mappers.HsPutresumeBOMapper.selectCountByParam", bo);
	}

	@Override
	public List<HsPutresumeBO> getAllByParam(HsPutresumeBO bo) {
		return daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsPutresumeBOMapper.selectByParam", bo);
	}

	@Override
	public List<ManageResumeBean> getReceivedResumeByPage(Page<ManageResumeBean> page) {
		return daoUtil.selectByParam("seentao.xhsn.bean.mappers.HsPutresumeBOMapper.selectReceivedResumeByPage", page);
	}

	@Override
	public List<ManageResumeBean> getCareResumeByPage(Page<ManageResumeBean> page) {
		return daoUtil.selectByParam("seentao.xhsn.bean.mappers.HsPutresumeBOMapper.selectCareResumeByPage", page);
	}

	@Override
	public List<ManageResumeBean> getEntSearchResumeByPage(Page<ResumeSearchBean> page) {
		return daoUtil.selectByParam("seentao.xhsn.bean.mappers.HsPutresumeBOMapper.selectEntSearchResumeByPage", page);
	}

	@Override
	public List<HsPutresumeBO> findPutResumeByPage(Page<HsPutresumeBO> page) {
		return daoUtil.selectByParam("seentao.xhsn.bean.mappers.HsPutresumeBOMapper.selectByPage", page);
	}

	@Override
	public int getCountByPutData(Timestamp putdata, String res_id) {
		HsPutresumeBO param = new HsPutresumeBO();
		param.setPutdatetime(putdata);
		param.setRes_id(res_id);
		return (Integer)daoUtil.selectOneValueByParam("seentao.xhsn.bean.mappers.HsPutresumeBOMapper.selectCountByDate", param );
	}
	
	
}

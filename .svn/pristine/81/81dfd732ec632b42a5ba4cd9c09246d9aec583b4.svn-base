/**
 * 只能是数字的约束
 * 
 * @param e
 * @returns
 */
function onlynumber(e) {
	var keynum;
	var keychar;
	var numcheck;

	if (window.event) {
		keynum = e.keyCode;
	} else if (e.which) {
		keynum = e.which;
	}
	// 屏蔽删除键
	if (keynum == 8 || keynum == 46) {
		return true;
	}
	// 屏蔽复制剪切粘贴快捷键
	if ((e.ctrlKey && keynum == 67) || (e.ctrlKey && keynum == 86)
			|| (e.ctrlKey && keynum == 88)) {
		return true;
	}
	keychar = String.fromCharCode(keynum);
	numcheck = /\d/;
	return numcheck.test(keychar);
}
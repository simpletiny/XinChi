package seentao.xhsn.person.certificate.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.stereotype.Repository;

import seentao.xhsn.bean.HsCertificateBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.person.certificate.dao.ICertificateDAO;

@Repository
public class CertificateDAOImpl extends SqlSessionDaoSupport implements ICertificateDAO {

	private SqlSession sqlSession;
	private DaoUtil daoUtil;

	public void initDao() {
		if (daoUtil == null) {
			sqlSession = sqlSession == null ? getSqlSession() : sqlSession;
			daoUtil = new DaoUtil(sqlSession);
		}
	}

	@Override
	public void insert(HsCertificateBO bo) {
		daoUtil.insertBO("seentao.xhsn.bean.mappers.HsCertificateBOMapper.insert", bo);
	}

	@Override
	public void update(HsCertificateBO bo) {
		daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsCertificateBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public void delete(String id) {
		daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsCertificateBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public HsCertificateBO selectByPrimaryKey(String id) {
		return (HsCertificateBO) daoUtil.selectByPK(
				"seentao.xhsn.bean.mappers.HsCertificateBOMapper.selectByPrimaryKey", id);
	}

	@Override
	public List<HsCertificateBO> getAllByParam(HsCertificateBO bo) {
		List<HsCertificateBO> list = daoUtil.selectByBOParamT(
				"seentao.xhsn.bean.mappers.HsCertificateBOMapper.selectByParam", bo);
		return list;
	}

	@Override
	public List<HsCertificateBO> findByUserIdAndResId(String user_id, String res_id) {
		HsCertificateBO bo = new HsCertificateBO();
		bo.setUser_id(user_id);
		bo.setRes_id(res_id);
		List<HsCertificateBO> list = daoUtil.selectByBOParamT(
				"seentao.xhsn.bean.mappers.HsCertificateBOMapper.selectByParam", bo);
		return list;
	}
}
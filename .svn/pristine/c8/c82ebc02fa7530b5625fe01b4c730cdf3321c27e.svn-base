package seentao.xhsn.person.hsuser.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.stereotype.Repository;

import seentao.xhsn.bean.HsUserBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.person.hsuser.dao.IHsUserDAO;

@Repository
public class HsUserDAOImpl extends SqlSessionDaoSupport implements IHsUserDAO {

	private SqlSession sqlSession;
	private DaoUtil daoUtil;

	public void initDao() {
		if (daoUtil == null) {
			sqlSession = sqlSession == null ? getSqlSession() : sqlSession;
			daoUtil = new DaoUtil(sqlSession);
		}
	}

	@Override
	public void insert(HsUserBO bo) {
		daoUtil.insertBO("seentao.xhsn.bean.mappers.HsUserBOMapper.insert", bo);
	}

	@Override
	public void update(HsUserBO bo) {
		daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsUserBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public void delete(String id) {
		daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsUserBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public HsUserBO selectByPrimaryKey(String id) {
		return (HsUserBO) daoUtil.selectByPK("seentao.xhsn.bean.mappers.HsUserBOMapper.selectByPrimaryKey", id);
	}

	@Override
	public List<HsUserBO> getAllByParam(HsUserBO bo) {
		List<HsUserBO> list = daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsUserBOMapper.selectByPram", bo);
		return list;
	}

}
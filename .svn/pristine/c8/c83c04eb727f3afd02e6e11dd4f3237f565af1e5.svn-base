package seentao.xhsn.sys.city.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.stereotype.Repository;

import seentao.xhsn.bean.HsCityBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.sys.city.dao.ICityDAO;

/**
 * 
 * @author niushixing 2015-1-7 13:54:19
 *
 */
@Repository
public class CityDAOImpl extends SqlSessionDaoSupport implements ICityDAO {

	private SqlSession sqlSession;
	private DaoUtil daoUtil;

	public void initDao() {
		if (daoUtil == null) {
			sqlSession = sqlSession == null ? getSqlSession() : sqlSession;
			daoUtil = new DaoUtil(sqlSession);
		}
	}

	@Override
	public void insert(HsCityBO bo) {
		daoUtil.insertBO("seentao.xhsn.bean.mappers.HsCityBOMapper.insert", bo);
	}

	@Override
	public void update(HsCityBO bo) {
		daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsCityBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public void delete(String id) {
		daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsCityBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public HsCityBO selectByPrimaryKey(String id) {
		return (HsCityBO) daoUtil.selectByPK("seentao.xhsn.bean.mappers.HsCityBOMapper.selectByPrimaryKey", id);
	}

	@Override
	public List<HsCityBO> getAllByParam(HsCityBO bo) {
		List<HsCityBO> list = daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsCityBOMapper.selectByParam", bo);
		return list;
	}

	@Override
	public List<HsCityBO> getProvinceList() {
		List<HsCityBO> list = daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsCityBOMapper.selectProvince", null);
		return list;
	}

	@Override
	public List<HsCityBO> getCityList(String provinceCode) {
		HsCityBO bo = new HsCityBO();
		bo.setProvince_code(provinceCode);
		List<HsCityBO> list = daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsCityBOMapper.selectCity", bo);
		return list;
	}

	@Override
	public List<HsCityBO> selectExists(HsCityBO bo) {
		List<HsCityBO> list = daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsCityBOMapper.selectExists", bo);
		return list;
	}
}
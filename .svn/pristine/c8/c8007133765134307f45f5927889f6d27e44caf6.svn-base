function formsub() {
	var validate_flag = false;
	validate_flag = validateform();
	if (validate_flag) {
		var layIndex=layer.load('信息保存中,请稍候...', -1);
		document.getElementById("myform").action = "person/savedesired";
		document.getElementById("myform").submit();
	}
}

function validateform() {
	//  验证表单
	var employment_type =  $("#employment_type").val();
	if(employment_type == null || $.trim(employment_type).length <= 0){
		$("#err_msg").text("期望工作性质不能为空");
		return false;
	}
	var jobArea_text = $("#btn_jobArea").val();
	if(jobArea_text == null || $.trim(jobArea_text).length <= 0){
		$("#err_msg").text("期望工作地点不能为空");
		return false;
	}
	var FuntypeID = $("#btn_FuntypeID").val();
	if(FuntypeID == null || $.trim(FuntypeID).length <= 0){
		$("#err_msg").text("期望从事工作不能为空");
		return false;
	}
	var IndustryID = $("#btn_IndustryID").val();
	if(IndustryID == null || $.trim(IndustryID).length <= 0){
		$("#err_msg").text("期望从事行业不能为空");
		return false;
	}
	var salary_scope = $("#salary_scope").val();
	if(salary_scope == null || $.trim(salary_scope).length <= 0){
		$("#err_msg").text("期望薪资不能为空");
		return false;
	}
	var job_state_code = $("#job_state_code").val();
	if(job_state_code == null || $.trim(job_state_code).length <= 0){
		$("#err_msg").text("目前工作状态不能为空");
		return false;
	}
	return true;
}

// 是否在数组内
function in_array(needle, haystack) {
	if (typeof needle == 'string' || typeof needle == 'number') {
		for ( var i in haystack) {
			if (haystack[i] == needle) {
				return true;
			}
		}
	}
	return false;
}
function clickoption(elem, code, text) {
	$("#" + elem).val(text);
	$("#" + elem + "_code").val(code);
	hide(elem + "_ul");
}
function hide(_sId) {
	if($("#" + _sId).css("display") == "none"){
		$("#" + _sId).css("display", "block");
	}else{
		$("#" + _sId).css("display", "none");
	}
}
function editform() {
	$("#info_show").css("display", "none");
	$("#info_edit").css("display", "block");
}
// 将编码转换成字符串
function getTextByCodes(codes, arraytext) {
	var arr = codes.split(",");
	var texts = "";
	for (var i = 0; i < arr.length; i++) {
		var code = arr[i];
		texts += "," + arraytext[code];
	}
	texts = texts.substring(1);
	return texts;
}


function resend(user_name,user_mail,id){
	var action="user/resend";
	var param="bo.user_name="+user_name+"&bo.user_email="+user_mail+"&bo.id="+id;
	$.ajax({
        url: action,
        data:param,
        type: "post",
        dataType: "json",
        success: function(data){
        	layer.msg("发送成功，请注意接收！");
        },
        error:function(a,b,c){
        	layer.alert("操作异常，请重新操作!");
 		}
	}); 
}
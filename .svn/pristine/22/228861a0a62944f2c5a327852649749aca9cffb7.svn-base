package seentao.xhsn.sys.job.dao;

import java.util.List;

import seentao.xhsn.bean.HsJobBO;
import seentao.xhsn.tools.Page;

/** 
 * @author wjx 
 * @date 2015年1月8日 下午1:29:27 
 * @note 
 */
public interface IJobDAO {

	/**
	 * 获取所有的职业（只包含一级）
	 * @param page
	 * @return
	 */
	List<HsJobBO> findAllJob(Page<HsJobBO> page);

	/**
	 * 根据id，获取职业信息
	 * @param id
	 * @return
	 */
	HsJobBO getByPK(String id);

	/**根据信息，进行修改
	 * @param bo
	 */
	int updateJobByPK(HsJobBO bo);

	/**插入一条新的信息
	 * @param bo
	 */
	String insert(HsJobBO bo);

	/**
	 * 根据参数，获取所有职位信息列表
	 * @param param
	 * @return
	 */
	List<HsJobBO> findAllJobsByParam(HsJobBO param);

	/**根据id删除职位
	 * @param id
	 */
	int deleteById(String id);

	/**根据参数获取，最大的编码
	 * @param param
	 * @return
	 */
	String getMaxCodeByParam(HsJobBO param);

	/**
	 * 根据参数，获取所有职位信息列表(分页)
	 * @param page
	 * @return
	 */
	List<HsJobBO> findJobsByPage(Page<HsJobBO> page);

}

<div>
	<h4 style="background:url(${basePath}common/images/resume/images/grxx.png);"></h4>
    <table cellspacing="0px"  style="width:16cm;border-collapse:collapse; border:0; font-size:8px; color:#565555; margin-left:70px;">
    <tr>
    	<td style="width:7cm" height="30">姓名：${ub.user_name}</td>
    	<td style="width:5cm" >性别：${ub.user_gender}</td>
    	<td style="width:4cm" rowspan="7" style="vertical-align:top;">
        	<#if ub.user_photo??>
        		<img src="${ub.user_photo}" style="height:105px;width:87px"/>
        	</#if>	
        </td>
    </tr>
    <tr>
    	<td style="width:7cm" height="30">出生年月：
    	<#if sub?? && sub.ub_birthday??>
    		${sub.ub_birthday[0..6]} 
    	</#if>
    	</td>
    	<td style="width:5cm" class="tdArea">户口所在地：
    	<#if sub?? && sub.aear_code??>
    		${sub.aear_code} 
    	</#if>
    	</td>
   	  </tr>
    <tr>
    	<td style="width:7cm" height="30">最高学历：${ub.user_degree}</td>
    	<td style="width:5cm">专业：${ub.major_name}</td>
   	  </tr>
    <tr>
    	<td style="width:7cm" height="30">毕业院校：${ub.school_name} </td>
    	<td style="width:5cm">政治面貌：
    	<#if sub?? && sub.political_id??>
    		${sub.political_id} 
    	</#if>
    	</td>
   	  </tr>
    <tr>
    	<td style="width:7cm" height="30">邮       箱：${ub.user_email}</td>
    	<td style="width:5cm">手机号：${ub.user_phone}</td>
   	  </tr>
   	  <tr>
    	<td style="width:7cm" height="30">工作经验：
    	<#if sub?? && sub.job_exp_year??>
    		${sub.job_exp_year} 
    	</#if>
    	</td>
    	<td style="width:5cm">现居住城市：
    	<#if sub?? && sub.ub_address??>
    		${sub.ub_address} 
    	</#if>
    	</td>
   	  </tr>
   	  <!--
    <tr>
    	<td style="width:7cm" height="30">婚姻状况：
    	<#if sub?? && sub.ub_marrystate??>
    		${sub.ub_marrystate} 
    	</#if>
    	</td>
    	<td width="304">国籍：
    	<#if sub?? && sub.ub_country??>
    		${sub.ub_country} 
    	</#if></td>
   	  </tr>
   	  -->
    <!-- <tr>
    	<td width="390" height="30">海外工作／经历：
    	<#if sub?? && sub.overseas_exp??>
    		${sub.overseas_exp} 
    	</#if>}</td>
    	<td width="304"></td>
   	  </tr>-->
    </table>
</div>

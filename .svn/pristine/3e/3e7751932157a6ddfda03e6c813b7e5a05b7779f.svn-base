package seentao.xhsn.person.evaluate.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import seentao.xhsn.bean.HsEvaluateBO;
import seentao.xhsn.person.evaluate.dao.IEvaluateDao;
import seentao.xhsn.person.evaluate.service.IEvaluateService;

/** 
 * @author wjx 
 * @date 2014年11月24日 下午3:31:19 
 * @note 
 */
@Service
@Transactional
public class EvaluateServiceImpl implements IEvaluateService {

	@Autowired
	private IEvaluateDao dao;
	
	@Override
	public void save(HsEvaluateBO bo) {
		if(bo.getId() != null && bo.getId().trim().length()>0){
			dao.updateByPK(bo);
		}else{
			dao.insert(bo);
		}
	}

	@Override
	public void insert(HsEvaluateBO bo) {
		dao.insert(bo);
	}

	@Override
	public void update(HsEvaluateBO bo) {
		dao.updateByPK(bo);
	}

	@Override
	public HsEvaluateBO getByUserIdAndResId(String user_id, String res_id) {
		HsEvaluateBO result = null;
		List<HsEvaluateBO> evaluates = dao.findByUserIdAndResId(user_id, res_id);
		if(evaluates != null && evaluates.size() > 0){
			result = evaluates.get(0);
		}
		return result;
	}

}

#att {
	width: 1024px;
	margin: 0 auto;
	background: #FFF;
	border-bottom: 2px solid #e5e4e4;
	padding: 17px 0px;
	margin-bottom: 16px;
}

#att p, #att ul {
	float: left;
}

#att p {
	width: 620px;
	height: 60px;
	padding: 20px 0 0 30px;
	line-height: 1.8em;
	font-size: 14px;
	color: #636262;
}

#att ul {
	width: 322px;
	padding-left: 50px;
	height: 80px;
	border-left: 1px solid #c5c3c3;
	color: #636262;
}

#att ul li {
	color: #636262;
	margin-bottom: 10px;
}

#att ul li .percent_box {
	width: 240px;
	background: #e5e5e5;
}

#att ul li .percent {
	width: 120px;
	background: url(../images/hint/percent.jpg) repeat-x;
	height: 17px;
}

#att ul li:nth-child(3) {
	color: #e60012;
}
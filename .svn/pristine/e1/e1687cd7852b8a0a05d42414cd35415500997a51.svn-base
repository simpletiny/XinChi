<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
 <%@taglib uri="/struts-tags" prefix="s" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="Cache-Control" CONTENT="no-store">
<meta http-equiv="expires" content="0">  
<title>新道人才网</title>
<base href="<%=basePath%>" />
<link rel="stylesheet" type="text/css" href="person/train/css/train.css"  />
<link rel="stylesheet" type="text/css" href="common/css/basic.css"  />
<script src="common/js/jquery-1.8.1.min.js" type="text/javascript"></script>
<script src="common/js/layer-v1.8.1/layer/layer.min.js"></script>
<script src="common/js/common.js" type="text/javascript"></script>
 <script type="text/javascript" src="<%=basePath%>common/js/WdatePicker/WdatePicker.js"></script>
<script src="person/train/js/train.js" type="text/javascript"></script>

</head>

<body>
	<div id="wrap">
    	<jsp:include page="/common/page/head_person.jsp" />
		<jsp:include page="/common/page/hint_person.jsp" />
      <div id="main">
      	<jsp:include page="/common/page/leftmenu_person.jsp" />
      	<div class="info">
        	<h4 class="gr">
            	<a style="cursor:pointer;" onclick="add('info_inner1');"></a>
            </h4>
            <s:if test="boList!=null&&boList.size()>0">
            <div class="info_inner">
            	 <s:iterator id="bean" value="boList"> 
                <div class="jl_inner">
                	<table width="775" cellspacing="0px"  style="border-collapse:collapse; border:0; color:#636262;">
                    <tr>
                    	<td width="390" height="30" style="padding-left:80px;">培训机构：${bean.institution_name}</td>
                    	<td width="385">时间：${bean.begintime}至${bean.endtime}</td>
                    </tr>
                    <tr>
                    	<td height="30" colspan="2" style="padding-left:80px;">培训课程：${bean.course_name}</td>
                   	  </tr>
                   	  <tr>
                    	<td colspan="2" style="padding-left:80px;"><b>详细描述：</b>${bean.details}</td>
                   	  </tr>
                    <tr>
                    	<td colspan="2" width="390" height="30" style="padding-left:80px;text-align:right;padding-right: 10px;">
                    	<a onclick="update('info_inner1','person/findTraining','bo.id=${bean.id }')"  style="cursor:pointer;font-size:14px; color:#636262; padding-right:10px; background:url(person/train/images/spanbg.jpg) no-repeat right center; margin-right:10px;">编辑</a>
                    	<a onclick="deleteBo('person/delTraining','bo.id=${bean.id }')" style="cursor:pointer;font-size:14px; color:#636262;">删除</a></td>
                    </tr>
                    </table>
                </div>
                </s:iterator>
            </div>
            </s:if>
            
            <div class="info_inner1"
            	<s:if test='boList!=null&&boList.size()>0&&isAdd!="y"'>
	            		style="display:none"
	            	</s:if> 
            >
            <form id="myForm" action="person/saveTraining" method="post">
            	<span id="errorTip" style="color:red"></span>
            	<input type="hidden" value="" id="key" name="bo.id">
            	<table width="745" cellspacing="0px"  style="border-collapse:collapse; border:0; color:#6d6e71;">
                    <tr>
                        <td height="45" style="background:url(common/images/red.png) no-repeat left center; width:100px; padding-left:25px;">时间：</td>
                   	  <td width="620"  style="text-align:left;">
                   	  	<input readonly id="begintime" name="bo.begintime" type="text" id="datepicker"  onClick="WdatePicker({dateFmt:'yyyy-MM',maxDate:'#F{$dp.$D(\'endtime\')||\'%y-%M\'}'})" 
                       		style="width: 82px; height: 33px; 
								line-height: 33px; background: url(common/images/nian.jpg) repeat-x; 
								margin-right: 10px; text-align: center; font-size: 16px;"/> 
								至
							<input readonly id="endtime" name="bo.endtime" type="text" id="datepicker"  onClick="WdatePicker({dateFmt:'yyyy-MM',minDate:'#F{$dp.$D(\'begintime\')}',maxDate:'%y-%M'})" 
                       		style="width: 82px; height: 33px; 
								line-height: 33px; background: url(common/images/nian.jpg) repeat-x; 
								margin-right: 10px; text-align: center; font-size: 16px;"/> 
                   	  	</td>
                    </tr>
                	<tr>
                        <td height="45" style="background:url(common/images/red.png) no-repeat left center; width:100px; padding-left:25px;">培训机构：</td>
                   	  <td width="620"  style="text-align:left;"><input id="institution_name" name="bo.institution_name" type="text" /></td>
                    </tr>
                    <tr>
                        <td height="45" style="background:url(common/images/red.png) no-repeat left center; width:100px; padding-left:25px;">培训课程：</td>
                   	  <td width="620"  style="text-align:left;"><input id="course_name" name="bo.course_name" type="text" /></td>
                    </tr>
                    <tr>
                        <td height="45" style="width:100px; padding-left:25px;">培训地点：</td>
                   	  <td width="620"  style="text-align:left;"><input id="address" name="bo.address" type="text" /></td>
                    </tr>
                    <tr>
                        <td height="45" style="width:100px; padding-left:25px;">获得证书：</td>
                   	  <td width="620"  style="text-align:left;"><input id="certificate" name="bo.certificate" type="text" /></td>
                    </tr>
                    <tr>
                        <td style="width:100px; padding-left:25px; vertical-align:top; padding-top:10px;">详细描述：</td>
                   	  <td width="620"  style="text-align:left; padding-top:5px;">
                   	  <textarea id="description" name="bo.details" cols="" rows="" style=" width:557px; height:121px; padding:5px; background:url(common/images/textarea.jpg) no-repeat; font-size:16px; color:#636262; margin-bottom:5px;"></textarea>
                   	  <br  /><p id="descriptionTip" style="color:red"></p>
                   	  <span style="font-size:12px; color:#636262; font-weight:normal;">（限500个字）</span></td>
                    </tr>
                    <tr>
                        <td height="45" style="width:100px; padding-left:25px;"></td>
                   	  <td width="620"  style="text-align:left; padding-top:10px;">
                   	  <input value="保存并新增" onclick="saveAndAdd('person/saveTraining','<%=basePath%>person/findAllTraining?lm_tab_name=${lm_tab_name}');"  type="button" style=" width:112px; height:34px; line-height:34px; font-size:16px; padding:0px; color:#fdfdfd; background:#fea201; cursor:pointer; margin-left:180px; margin-right:25px;" />
                   	  <input value="保  存" onclick="save('person/saveTraining','<%=basePath%>person/findAllTraining?lm_tab_name=${lm_tab_name}');" type="button" style=" width:112px; height:34px; line-height:34px; font-size:16px; padding:0px; color:#fdfdfd; background:#fea201; cursor:pointer; margin-right:25px;" />
                   	  <input value="返 回" onclick="javascript:history.back();location.reload();" type="button" style=" width:112px; height:34px; line-height:34px; font-size:16px; color:#747171; background:#ececec; cursor:pointer; padding-left:0px;" /></td>
                    </tr>
                 </table>
                 </form>
            </div>
        </div>
        <br />
      </div>
      <jsp:include page="/common/page/footer.jsp" />
    </div>
</body>
</html>

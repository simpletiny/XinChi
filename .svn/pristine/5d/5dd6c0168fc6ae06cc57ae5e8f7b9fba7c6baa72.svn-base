<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
 <%@taglib uri="/struts-tags" prefix="s" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
pageContext.setAttribute("basePath", basePath);
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>专业管理</title>
<link rel="stylesheet" type="text/css" href="<%=basePath %>common/css/basic.css"  />
<link rel="stylesheet" type="text/css" href="<%=basePath %>admin/managemajor/css/manage_major.css"  />
<script src="<%=basePath %>common/js/jquery-1.8.1.min.js" type="text/javascript"></script>
<script src="<%=basePath%>common/js/layer-v1.8.1/layer/layer.min.js"></script>
<script type="text/javascript" src="<%=basePath %>common/js/drag.js"></script>
<script src="<%=basePath %>common/js/major_arr.js" type="text/javascript"></script>
<script src="<%=basePath %>common/js/major_func.js" type="text/javascript"></script>
<script src="<%=basePath %>admin/managemajor/js/manage_major.js" type="text/javascript"></script>
<script type="text/javascript">
	window['basePath']="<%=basePath%>";
	// 是否在数组内
	function in_array(needle, haystack) {
		if(typeof needle == 'string' || typeof needle == 'number') {
			for(var i in haystack) {
				if(haystack[i] == needle) {
						return true;
				}
			}
		}
		return false;
	}
</script>
</head>
<body>
	<div style="width:1024px;text-algin:center">
		<h1>专业管理</h1>
	</div>
	<div>
		<div>
			专业分类
		</div>
		<div style="width:1024px;float:left;display:block;margin-bottom: 20px">
		<div style="width:100px;float:left">
			<input type="button" class="btn" value="新建分类" onclick="addBig()" />
		</div>
		<div style="width:920px;float:left;display:none;height:28px" id="div_add_big">
		<form id="form_add_big">
			<table>
				<tr>
					<td style="width:50px">
						名称：
					</td>
					<td>
						<input style="width:100px" name="majorBo.name" id="big_name" maxlength="50"/>
					</td>
					<td style="width:50px">
						编码：
					</td>
					<td>
						<input style="width:60px" name="majorBo.code" id="big_code" maxlength="4"/>
					</td>
					<td style="width:60px">
						排序号：
					</td>
					<td>
						<input style="width:60px" name="majorBo.sort_no" id="big_sort_no" maxlength="4"/>
					</td>
					<td style="width:100px;text-align: right">
						<input type="button" class="btn" onclick="saveMajor('big')" value="保存"/>
					</td>
				</tr>
			</table>
			</form>
		</div>
	</div>
		<div style="width:1100px">
			<table style="border:1px solid #7E9CF7;border-collapse:collapse;background-color: #D9E2FD">
				<tr>
					<th style="width:200px;border:1px solid #7E9CF7">名称</th>
					<th style="width:100px;border:1px solid #7E9CF7">编码</th>
					<th style="width:100px;border:1px solid #7E9CF7">排序号</th>
					<th style="width:120px;border:1px solid #7E9CF7">操作</th>
					<th style="width:200px;border:1px solid #7E9CF7">名称</th>
					<th style="width:100px;border:1px solid #7E9CF7">编码</th>
					<th style="width:100px;border:1px solid #7E9CF7">排序号</th>
					<th style="width:120px;border:1px solid #7E9CF7">操作</th>
				</tr>
			</table>
		</div>
		<div style="height:300px;overflow: auto;width:1100px" id="div_big_major">
			<s:include value="bigMajor.jsp"></s:include>
		</div>
	</div>
	<div>
		<div>
			分类详情
		</div>
		<div>
			<h1 id="bigMajorTitle"></h1>
			<input id="hidBigMajorCode" type="hidden"/>
		</div>
		<div id="div_small_major">
			
		</div>
	</div>
	<div>
		效果预览：
	</div>
	<div>
		<input id="btn_MajorID_2" type="button" value="请选择专业" onclick="majorSelect_2()" style="text-align:left;" />
	</div>
	
	 <!-- alpha div -->
<div id="maskLayer" style="display:none">
<iframe id="maskLayer_iframe" frameBorder=0 scrolling=no style="filter:alpha(opacity=50)"></iframe>
<div id="alphadiv" style="filter:alpha(opacity=50);-moz-opacity:0.5;opacity:0.5"></div>
	<div id="drag">
		<h3 id="drag_h"></h3>
		<div id="drag_con"></div><!-- drag_con end -->
	</div>
</div><!-- maskLayer end -->
<!-- alpha div end -->
<div id="sublist" style="display:none"></div>
</body>
</html>
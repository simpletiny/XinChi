package seentao.xhsn.sys.trade.dao;

import java.util.List;

import seentao.xhsn.bean.HsTradeBO;
import seentao.xhsn.tools.Page;

/** 
 * @author wjx 
 * @date 2015年1月7日 下午2:08:24 
 * @note 
 */
public interface ITradeDAO {

	/**获取所有的行业信息
	 * @return
	 */
	List<HsTradeBO> findAllTrade();
	/**获取所有的行业信息(分页)
	 * @return
	 */
	List<HsTradeBO> findAllTradeByPage(Page<HsTradeBO> page);

	/**根据id获取行业信息
	 * @param id 主键
	 * @return 影响的行数
	 */
	HsTradeBO getByPK(String id);

	/** 插入一条行业信息
	 * @param id 主键
	 * @return 影响的行数
	 */
	String insertTrade(HsTradeBO bo);
	/**根据id，修改行业信息
	 * @param id 主键
	 * @return 影响的行数
	 */
	int updateTrade(HsTradeBO bo);

	/**根据id删除数据
	 * @param id 主键
	 * @return 影响的行数
	 */
	int deleteTrade(String id);

}

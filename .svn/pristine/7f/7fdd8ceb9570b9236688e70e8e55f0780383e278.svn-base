package seentao.xhsn.person.resumevisitor.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.stereotype.Repository;

import seentao.xhsn.bean.HsResumeVisitorBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.person.resumevisitor.dao.IResumeVisitorDAO;
import seentao.xhsn.tools.Page;

@Repository
public class ResumeVisitorDAOImpl extends SqlSessionDaoSupport implements IResumeVisitorDAO {

	private SqlSession sqlSession;
	private DaoUtil daoUtil;

	public void initDao() {
		if (daoUtil == null) {
			sqlSession = sqlSession == null ? getSqlSession() : sqlSession;
			daoUtil = new DaoUtil(sqlSession);
		}
	}

	@Override
	public void insert(HsResumeVisitorBO bo) {
		daoUtil.insertBO("seentao.xhsn.bean.mappers.HsResumeVisitorBOMapper.insert", bo);
	}

	@Override
	public void update(HsResumeVisitorBO bo) {
		daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsResumeVisitorBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public void delete(String id) {
		daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsResumeVisitorBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public HsResumeVisitorBO selectByPrimaryKey(String id) {
		return (HsResumeVisitorBO) daoUtil.selectByPK(
				"seentao.xhsn.bean.mappers.HsResumeVisitorBOMapper.selectByPrimaryKey", id);
	}

	@Override
	public List<HsResumeVisitorBO> getAllByParam(HsResumeVisitorBO bo) {
		List<HsResumeVisitorBO> list = daoUtil.selectByBOParamT(
				"seentao.xhsn.bean.mappers.HsResumeVisitorBOMapper.selectByParam", bo);
		return list;
	}

	@Override
	public List<HsResumeVisitorBO> findByUserIdResId(String user_id, String res_id) {
		HsResumeVisitorBO bo = new HsResumeVisitorBO();
		bo.setUser_id(user_id);
		bo.setRes_id(res_id);
		List<HsResumeVisitorBO> list = daoUtil.selectByBOParamT(
				"seentao.xhsn.bean.mappers.HsResumeVisitorBOMapper.selectByParam", bo);
		return list;
	}

	@Override
	public int getVisitorCnt(String user_id, String res_id) {
		HsResumeVisitorBO bo = new HsResumeVisitorBO();
		bo.setUser_id(user_id);
		bo.setRes_id(res_id);
		return (Integer)daoUtil
				.selectOneValueByParam("seentao.xhsn.bean.mappers.HsResumeVisitorBOMapper.selectCountByParam", bo);
	}

	@Override
	public List<HsResumeVisitorBO> findVisitorByPage(Page<HsResumeVisitorBO> page) {
		return daoUtil.selectByParam("seentao.xhsn.bean.mappers.HsResumeVisitorBOMapper.selectByPage", page);
	}
}
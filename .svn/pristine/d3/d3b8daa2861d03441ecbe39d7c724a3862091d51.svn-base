			// current_page : 0, // 当前页码
			// num_edge_entries : 2
			//			});
		}
	});
}

function searchData(page_id, jq) {
	var param = "type=" + st_type;
	param += "&" + "page.pageNo=" + (page_id + 1);
	$.ajax({
		url : "fetchCenterDetail",
		data : param,
		type : "post",
		success : function(data) {
			$("#div_content").html(data);
		}
	});
}

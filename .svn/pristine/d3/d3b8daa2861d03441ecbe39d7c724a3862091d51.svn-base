/**
 * 申请职位
 * 
 * @param btn
 */
function applyJob(btn) {
	var jobIds = $(btn).parent().find("input.jobId").val();
	$.ajax({
		url : "applyJob",
		data : "job_ids=" + jobIds,
		type : "GET",
		success : function(r) {
			// 如果申请成功
			if (r == "OK") {
				alert("申请成功");
				location.href = "centerInit";
			}
		}
	});
}
/**
 * 批量申请工作
 */
function applyJobs() {
	var jobIds = new Array();
	$.each($("#div_content input[name='chkJob']"), function(n, value) {
		if ($(value).attr("checked")) {
			var id = $($(value).parent().prev("input.jobId")).val();
			jobIds.push(id);
		}
	});
	$.ajax({
		url : "applyJob",
		data : "job_ids=" + jobIds,
		type : "GET",
		success : function(r) {
			// 如果申请成功
			if (r == "OK") {
				alert("申请成功");
				location.href = "centerInit";
			}
		}
	});
}

/**
 * 选择全部
 */
function checkAll() {
	$.each($("#div_content input[name='chkJob']"), function(n, value) {
		$(value).attr("checked", !!$("#chk_all").attr("checked"));
	});
}

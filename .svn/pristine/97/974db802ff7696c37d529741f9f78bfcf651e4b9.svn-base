package seentao.xhsn.sys.major.action;

import java.util.List;

import org.apache.struts2.json.annotations.JSON;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.config.BeanDefinition;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import seentao.xhsn.bean.HsMajorBO;
import seentao.xhsn.common.BaseAction;
import seentao.xhsn.sys.major.service.IMajorService;

/**
 * 
 * @author niushixing 2015-1-8 15:34:25
 *
 */
@Controller
@Scope(BeanDefinition.SCOPE_PROTOTYPE)
public class MajorAction extends BaseAction {
	private static final long serialVersionUID = 4757319754501900830L;

	private List<HsMajorBO> bigMajorList;
	private List<HsMajorBO> smallMajorList;

	@Autowired
	private IMajorService majorService;

	/**
	 * 专业管理页面初始化
	 * 
	 * @return
	 */
	public String init() {
		bigMajorList = majorService.getBigMajor();
		return SUCCESS;
	}

	private String majorId;
	private String majorCode;
	public String fetchSmallMajor() {
		smallMajorList = majorService.getSmallMajor(majorCode);
		return SUCCESS;
	}

	@JSON(serialize = false)
	public List<HsMajorBO> getBigMajorList() {
		return bigMajorList;
	}

	public void setBigMajorList(List<HsMajorBO> bigMajorList) {
		this.bigMajorList = bigMajorList;
	}

	@JSON(serialize = false)
	public String getMajorId() {
		return majorId;
	}

	public void setMajorId(String majorId) {
		this.majorId = majorId;
	}

	@JSON(serialize = false)
	public List<HsMajorBO> getSmallMajorList() {
		return smallMajorList;
	}

	public void setSmallMajorList(List<HsMajorBO> smallMajorList) {
		this.smallMajorList = smallMajorList;
	}
	@JSON(serialize = false)
	public String getMajorCode() {
		return majorCode;
	}

	public void setMajorCode(String majorCode) {
		this.majorCode = majorCode;
	}

}

package seentao.xhsn.person.customskill.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import seentao.xhsn.bean.HsCustomSkillBO;
import seentao.xhsn.common.DictionaryEnum;
import seentao.xhsn.common.ResourcesConstants;
import seentao.xhsn.common.SeentaoApplicationContext;
import seentao.xhsn.common.UserSessionBean;
import seentao.xhsn.person.customskill.dao.ICustomSkillDAO;
import seentao.xhsn.person.customskill.service.ICustomSkillService;
import seentao.xhsn.sys.leftmenu.service.ILeftMenuService;

@Service
@Transactional
public class CustomSkillServiceImpl implements ICustomSkillService{

	@Autowired
	private ICustomSkillDAO dao;
	@Autowired
	private ILeftMenuService lmService;
	
	@Override
	@Transactional(rollbackFor={RuntimeException.class, Exception.class})
	public void insert(HsCustomSkillBO bo) {
		dao.insert(bo);
		//更新菜单信息
		lmService.updateByParam(bo.getTable_name(),DictionaryEnum.MENU_TOTALLY.getStringValue());

	}

	@Override
	public void update(HsCustomSkillBO bo) {
		dao.update(bo);
	}
	
	@Override
	public void delCustomSkill(String id) {
		this.delete(id);
		//更新菜单
		HsCustomSkillBO paramBO=new HsCustomSkillBO();
		UserSessionBean sessionBean=(UserSessionBean) SeentaoApplicationContext.getSession(ResourcesConstants.LOGIN_SESSION_KEY);
		paramBO.setRes_id(sessionBean.getRes_id());
		paramBO.setUser_id(sessionBean.getUser_sys_id());
		 List<HsCustomSkillBO> list = this.getAllByParam(paramBO);
		if(list!=null&&list.size()>0){
			lmService.updateByParam(paramBO.getTable_name(), DictionaryEnum.MENU_TOTALLY.getStringValue());
		}else{
			lmService.updateByParam(paramBO.getTable_name(), DictionaryEnum.MENU_NEVER.getStringValue());
		}
	}
	
	@Override
	public void delete(String id) {
		dao.delete(id);
	}

	@Override
	public HsCustomSkillBO selectByPrimaryKey(String id) {
		return dao.selectByPrimaryKey(id);
	}

	@Override
	public List<HsCustomSkillBO> getAllByParam(HsCustomSkillBO bo) {
		return dao.getAllByParam(bo);
	}

	
}
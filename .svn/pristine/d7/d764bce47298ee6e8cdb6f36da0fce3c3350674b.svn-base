<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
 <%@taglib uri="/struts-tags" prefix="s" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
  <head>
    <base href="<%=basePath%>">
    
    <title>My JSP 'dictionary.jsp' starting page</title>
    
	<meta http-equiv="pragma" content="no-cache">
	<meta http-equiv="cache-control" content="no-cache">
	<meta http-equiv="expires" content="0">    
	<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
	<meta http-equiv="description" content="This is my page">
	<!--
	<link rel="stylesheet" type="text/css" href="styles.css">
	-->
	<style type="text/css">
	td{
		padding-left:10px;
		padding-right:15px;
		padding-top:5px;
		padding-bottom:5px;
	}
	</style>
 	<script src="<%=basePath%>common/js/jquery-1.8.1.min.js" type="text/javascript"></script>
		<script src="<%=basePath%>common/js/layer-v1.8.1/layer/layer.min.js"></script>
		<script src="<%=basePath%>common/js/common.js"></script>
  </head>
  <script type="text/javascript">
  function handleUpdateResponse(data){
  		$("#key").val(data.bo.id);
	        	 $("#dictionary_code").val(data.bo.dictionary_code);
	        	 $("#val").val(data.bo.value);
  	}
  function validate(){
	  var code = $("#dictionary_code").val();
	  var text = $("#val").val();
	  //alert("code=" + code +" |||| text=" + text );
	  if(code != null && code != "" && text != null && text != ""){
		  return true;
	  }
	  alert("编码和字典值都是必填项！");
	  return false;
  }
  </script>
  
  <body>
   <table id="tab_list">
    	<tr>
    		<td>编码</td>
    		<td>显示值</td>
    		<td>   </td>
    	</tr>
    	<s:if test="boList!=null&&boList.size()>0">
	    	<s:iterator id="bean" value="boList"> 
	    		<tr>
	    			<td>${bean.dictionary_code }</td>
	    			<td>${bean.value }</td>
	    			<td><a style="cursor:pointer;" onclick="update('tab_list', 'sys/getDictionaryData', 'bo.id=${bean.id }')">修改</a>||
	    				<a style="cursor:pointer;" onclick="deleteBo('sys/delDictionaryData','bo.id=${bean.id }')">删除</a>
	    			</td>
	    		</tr>
	    	</s:iterator>
    	</s:if>
    </table>
    <br/>
    <form id="myForm" action="sys/addOrUpdateDictionaryData" method="POST">
    	<input type="hidden" value="" id="key" name="bo.id">
    	<input type="hidden" id="dictionary_catalog" name="bo.dictionary_catalog" value="${bo.dictionary_catalog }">
    	<input type="text" id="dictionary_code" name="bo.dictionary_code" >
    	<input type="text" id="val" name="bo.value" >
    	<br/>
    	<input type="button" onclick="save('sys/addOrUpdateDictionaryData', 'sys/getAllDictionaryData?bo.dictionary_catalog=${bo.dictionary_catalog }');" value="保存"/>
    </form>
    
  </body>
</html>

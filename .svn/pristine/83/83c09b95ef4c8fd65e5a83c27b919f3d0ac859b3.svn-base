package seentao.xhsn.person.learnpath.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.stereotype.Repository;

import seentao.xhsn.bean.HsLearnpathBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.common.SupperBO;
import seentao.xhsn.person.learnpath.dao.ILearnPathDAO;


@Repository
public class LearnPathDAOImpl extends SqlSessionDaoSupport implements ILearnPathDAO{

	private SqlSession sqlSession;
	private DaoUtil daoUtil;
	public void initDao(){
		if(daoUtil==null){
			sqlSession=sqlSession==null?getSqlSession():sqlSession;
			daoUtil=new DaoUtil(sqlSession);
		}
	}
	
	@Override
	public void insert(HsLearnpathBO bo) {
		daoUtil.insertBO("seentao.xhsn.bean.mappers.HsLearnpathBOMapper.insert", bo);
	}
	@Override
	public void insertBOList(List<SupperBO> boList) {
		daoUtil.insertBOList("seentao.xhsn.bean.mappers.HsLearnpathBOMapper.insertWithList", boList);
	}
	@Override
	public void update(HsLearnpathBO bo) {
		daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsLearnpathBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public void delete(String id) {
		daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsLearnpathBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public HsLearnpathBO selectByPrimaryKey(String id) {
		return (HsLearnpathBO) daoUtil.selectByPK("seentao.xhsn.bean.mappers.HsLearnpathBOMapper.selectByPrimaryKey", id);
	}

	@Override
	public List<HsLearnpathBO> getAllByParam(HsLearnpathBO bo) {
		List<HsLearnpathBO> list=daoUtil.selectByBOParamT("seentao.xhsn.bean.mappers.HsLearnpathBOMapper.selectByParam", bo);
		return list;
	}
	
	public List<SupperBO> selectByIdentityCard(HsLearnpathBO bo){
		List<SupperBO> list=daoUtil.selectByBOParam("seentao.xhsn.bean.mappers.HsLearnpathBOMapper.selectByIdentityCard", bo);
		return list;
	}

	public List<SupperBO> selectByUserID(String userID){
		List<SupperBO> list=daoUtil.selectByParam("seentao.xhsn.bean.mappers.HsLearnpathBOMapper.selectByUserID", userID);
		return list;
	}
	
	@Override
	public void deleteByIdentityCard(String identity_card) {
		HsLearnpathBO learnpathBO=new HsLearnpathBO();
		learnpathBO.setIdentity_card(identity_card);
		daoUtil.deleteByBOParam("seentao.xhsn.bean.mappers.HsLearnpathBOMapper.deleteByParam", learnpathBO);
	}
	
	
}
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ page import="seentao.xhsn.tools.PropertiesUtil" %>
<%@ page import="seentao.xhsn.common.DictionaryEnum" %>

<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib uri="/struts-tags" prefix="s" %> 

<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";

String user_type = "1";
if(request.getParameter("user_type") != null &&  request.getParameter("user_type").trim().length() > 0){
	user_type = request.getParameter("user_type");
}
String login_project_url = PropertiesUtil.getProperty("login_project_url");
String ent_type = DictionaryEnum.ENTERPRISE_TYPE.getStringValue();
%>
    
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<base href="<%=basePath %>"/>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>新道人才网</title>
<link rel="stylesheet" type="text/css" href="<%=basePath%>common/css/basic.css"  />
<link rel="stylesheet" type="text/css" href="<%=basePath%>login/css/login.css"  />
<script src="<%=basePath%>common/js/jquery-1.8.1.min.js" type="text/javascript"></script>
<script src="<%=basePath%>share/register/js/registration.js" type="text/javascript"></script>
</head>

<body>
<div id="wrap">
    	<jsp:include page="/common/page/head.jsp" />
         <div style='width:586px; height:568px; margin:0 auto;'>
        	<div id="main">
        		<ul>
	            	<li>
	        			<a style="cursor:pointer;" class="person">个人注册
	            		</a>
	                    <div class="person_inner">
	                    	<ul>
	                            <li><input  type="button" class="dl" value="个人登录" id="person_login_btn" onclick="openurl('<%=basePath%>user/login')"/></li>
	                            <li><input type="button" class="dl" value="个人注册" id="person_regist_btn"  onclick="openurl('<%=login_project_url%>')"/></li>
	                        </ul>
	                    </div>
	            	</li>
	            	<li>
	        			<a style="cursor:pointer;" class="company">企业注册</a>
	                    <div class="company_inner">
	                    	<ul>
	                            <li><input type="button" class="dl" value="企业登录" id="ent_login_btn"  onclick="openurl('<%=basePath%>user/login?type=<%=ent_type%>')"/></li>
	                            <li><input type="button" class="dl" value="企业注册" id="ent_regist_btn"  onclick="openurl('<%=basePath%>share/register/regist_ent.jsp')"/></li>
	                        </ul>
	                    </div>
	            	</li>
            		<br />
            	</ul>
        	</div>
         </div> 	
        <jsp:include page="/common/page/footer.jsp" />
    </div>
</body>
</html>

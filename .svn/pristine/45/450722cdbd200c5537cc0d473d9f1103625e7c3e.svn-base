$(document).ready(function(){
	switchTab(3);
	$("#description").bind('input propertychange', function() {
		if($("#description").val().length>500){
			$("#descriptionTip").text("超过字数限制！");
			$("#description").val($("#job_description").val().substring(0,500));
		}
		if($("#description").val().length<500){
			$("#descriptionTip").text("");
		}
	}); 
});

function validate(){
	if($("#begintime").val().length==0){
		$("#errorTip").text("请选择开始时间!");
		return false;
	}
	if($("#endtime").val().length==0){
		$("#errorTip").text("请选择结束时间!");
		return false;
	}
	if($("#institution_name").val().length==0){
		$("#errorTip").text("请输入培训机构!");
		return false;
	}
	if($("#course_name").val().length==0){
		$("#errorTip").text("请输入培训课程!");
		return false;
	}
	return true;
}

function handleUpdateResponse(data){
	$("#key").val(data.bo.id);
	$("#begintime").val(data.bo.begintime);
	$("#endtime").val(data.bo.endtime);
	$("#institution_name").val(data.bo.institution_name);
	$("#course_name").val(data.bo.course_name);
	$("#address").val(data.bo.address);
	$("#certificate").val(data.bo.certificate);
	$("#description").val(data.bo.details);
}
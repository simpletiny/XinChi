<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@taglib uri="/struts-tags" prefix="s" %>
<s:if test='type=="0"'>
 <tr>
            	<td width="540" height="40" style="font-size:16px; padding-left:50px;"><s:property value="job.jobName"/>
				</td>
            	<td width="424" style="text-align:center;"></td>
            </tr>
            <tr>
            	<td width="540" height="40" style="font-size:16px; padding-left:50px;"><span><s:property value="job.jobExp"/></span><span><s:property value="job.education"/></span>
              </td>
            	<td width="424" style="font-size:16px; color:#05a687; text-align:center;"><span><a href="javascript:void(0)" onclick="refreshJob('${job.rjboId}','0',this)">刷新</a></span><span><a href="javascript:modifyJob('${job.rjboId}')">修改</a></span><span><a href="javascript:publishJob('${job.rjboId}','0')">发布</a></span><span style="margin-right:0px;"><a href="javascript:deleteJob('${job.rjboId}','0')">删除</a></span></td>
            </tr>      
</s:if>
<s:elseif test='type=="1"'>     
<tr>
         	<td width="540" height="40" style="font-size:16px; padding-left:50px;"><s:property value="job.jobName"/></td>
            <td width="424" style="text-align:center;"><a href="javascript:void(0)" onclick="getReceivedResume(this)" style="color:#05a687; font-size:16px;"><s:property value="job.resumeCnt"/>份简历应聘</a></td>
       		<td style="display:none" class="tdJobId"><input type="hidden" value="${job.rjboId}"/></td>
         </tr>
         <tr>
         	<td width="540" height="40" style="font-size:16px; padding-left:50px;"><span><s:property value="job.jobExp"/></span><span><s:property value="job.education"/></span>
           </td>
         	<td width="424" style="font-size:16px; color:#05a687; text-align:center;"><span><a href="javascript:void(0)" onclick="refreshJob('${job.rjboId}','1',this)">刷新</a></span><span><a href="javascript:modifyJob('${job.rjboId}')">修改</a></span><span><a href="javascript:endJob('${job.rjboId }','1')">结束</a></span><span style="margin-right:0px;"><a href="javascript:deleteJob('${job.rjboId}','1')">删除</a></span></td>
         </tr>
</s:elseif>      
<s:elseif test='type=="2"'>           
 <tr>
          	<td width="540" height="40" style="font-size:16px; padding-left:50px;"><s:property value="job.jobName"/>
			</td>
            <td width="424" style="text-align:center;"><a style="color:#05a687; font-size:16px;" href="javascript:void(0)" onclick="getReceivedResume(this)"><s:property value="job.resumeCnt"/>份简历应聘</a></td>
          	<td style="display:none" class="tdJobId"><input type="hidden" value="${job.rjboId}"/></td>
          </tr>
          <tr>
          	<td width="540" height="40" style="font-size:16px; padding-left:50px;"><span><s:property value="job.jobExp"/></span><span><s:property value="job.education"/></span>
            </td>
          	<td width="424" style="font-size:16px; color:#05a687; text-align:center;"><span><a href="javascript:void(0)" onclick="refreshJob('${job.rjboId}','2',this)">刷新</a></span><span><a href="javascript:modifyJob('${job.rjboId}')">修改</a></span><span style="margin-right:0px;"><a href="javascript:deleteJob('${job.rjboId}','2')">删除</a></span></td>
          </tr>
</s:elseif>
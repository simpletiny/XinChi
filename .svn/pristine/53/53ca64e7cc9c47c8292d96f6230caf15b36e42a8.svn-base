package seentao.xhsn.enterprise.info.dao.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.support.SqlSessionDaoSupport;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Repository;

import seentao.xhsn.bean.HsEnterpriseBO;
import seentao.xhsn.common.DaoUtil;
import seentao.xhsn.enterprise.info.dao.IInfoDAO;

/**
 * 企业信息操作DAO实现类
 * 
 * @author niushixing 2014-12-2 上午10:59:53
 * 
 */
@Repository
@Scope("prototype")
public class InfoDAOImpl extends SqlSessionDaoSupport implements IInfoDAO {

	private SqlSession sqlSession;
	private DaoUtil daoUtil;

	public void initDao() {
		if (daoUtil == null) {
			sqlSession = sqlSession == null ? getSqlSession() : sqlSession;
			daoUtil = new DaoUtil(sqlSession);
		}
	}

	@Override
	public String insert(HsEnterpriseBO bo) {
		return daoUtil.insertBO("seentao.xhsn.bean.mappers.HsEnterpriseBOMapper.insert", bo);
	}

	@Override
	public void update(HsEnterpriseBO bo) {
		daoUtil.updateByPK("seentao.xhsn.bean.mappers.HsEnterpriseBOMapper.updateByPrimaryKey", bo);
	}

	@Override
	public void delete(String id) {
		daoUtil.deleteByPK("seentao.xhsn.bean.mappers.HsEnterpriseBOMapper.deleteByPrimaryKey", id);
	}

	@Override
	public HsEnterpriseBO selectByPrimaryKey(String id) {
		return (HsEnterpriseBO) daoUtil.selectByPK("seentao.xhsn.bean.mappers.HsEnterpriseBOMapper.selectByPrimaryKey",
				id);
	}

	@Override
	public List<HsEnterpriseBO> getAllByParam(HsEnterpriseBO bo) {
		List<HsEnterpriseBO> list = daoUtil.selectByBOParamT(
				"seentao.xhsn.bean.mappers.HsEnterpriseBOMapper.selectByPram", bo);
		return list;
	}

	@Override
	public HsEnterpriseBO getBySysUserId(String id) {
		HsEnterpriseBO bo = new HsEnterpriseBO();
		bo.setSys_user_id(id);
		List<HsEnterpriseBO> list = daoUtil.selectByBOParamT(
				"seentao.xhsn.bean.mappers.HsEnterpriseBOMapper.selectByPram", bo);
		if (null != list && list.size() > 0) {
			return list.get(0);
		}
		return null;
	}

}
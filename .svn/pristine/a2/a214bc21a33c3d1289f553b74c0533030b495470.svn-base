<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
 <%@taglib uri="/struts-tags" prefix="s" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="Cache-Control" CONTENT="no-store">
<meta http-equiv="expires" content="0">  
<title>新道人才网</title>
<base href="<%=basePath%>" />
<link rel="stylesheet" type="text/css" href="person/company/css/company.css"  />
<link rel="stylesheet" type="text/css" href="common/css/basic.css"  />
<script src="common/js/jquery-1.8.1.min.js" type="text/javascript"></script>
<script src="common/js/layer-v1.8.1/layer/layer.min.js"></script>
<script type="text/javascript" src="common/js/drag.js"></script>
<script src="common/js/common.js" type="text/javascript"></script>
<script type="text/javascript" src="common/js/funtype_arr.js"></script>
<script type="text/javascript" src="common/js/funtype_func.js"></script>
<script type="text/javascript" src="common/js/industry_arr.js"></script>
 <script type="text/javascript" src="common/js/industry_func.js"></script>
 <script type="text/javascript" src="<%=basePath%>common/js/WdatePicker/WdatePicker.js"></script>
 <script src="person/company/js/company.js" type="text/javascript"></script>
</head>

<body>

	<div id="wrap">
   	 <jsp:include page="/common/page/head_person.jsp" />
		<jsp:include page="/common/page/hint_person.jsp" />
      <div id="main">
      	<jsp:include page="/common/page/leftmenu_person.jsp" />
      	<div class="info">
        	<h4 class="gr">
            <a style="cursor:pointer;" onclick="add('info_inner');"></a>
            </h4>
            <s:if test="boList!=null&&boList.size()>0">
            <div class="info_inner1">
            	<s:iterator id="bean" value="boList"> 
            	<div class="jl_inner">
                    		<p>${bean.begindate}~~${bean.enddate}<span>&nbsp;&nbsp;<b>${bean.com_name}</b></span></p>
			                <p><script type="text/javascript">
			            				document.write(ind_a['${bean.trade_code}']);
			            				document.close();
			          			</script>| ${bean.com_type_value} | 规模:${bean.com_size_value}| ${bean.salary_scope_value}</p>
			                <p><b>工作描述：</b>${bean.job_description}</p>
			                <p style="text-align:right;padding-right: 10px;">
                    	<a onclick="update('info_inner','person/findUBCompany','bo.id=${bean.id }')"  style="cursor:pointer;font-size:14px; color:#636262; padding-right:10px; background:url(person/company/images/spanbg.jpg) no-repeat right center; margin-right:10px;">编辑</a>
                    	<a onclick="deleteBo('person/delUBCompany','bo.id=${bean.id }')" style="cursor:pointer;font-size:14px; color:#636262;">删除</a></td>
                    	</p>
                </div>
                </s:iterator>
            </div>
            </s:if> 	  
            <div class="info_inner"
            	<s:if test='boList!=null&&boList.size()>0&&isAdd!="y"'>
	            		style="display:none"
	            	</s:if> 
            	>
            	<form id="myForm" action="person/saveUBCompany" method="post">
            	<span id="errorTip" style="color:red"></span>
            	<input type="hidden" value="" id="key" name="bo.id">
            	<table width="740" cellspacing="0px"  style="border-collapse:collapse; border:0; color:#6d6e71;">
                	<tr>
                        <td width="145" height="48" style="padding-left:30px;background:url(common/images/red.png) no-repeat left center;">企业名称：</td>
                    	<td colspan="2"  style="text-align:left;">
                    		<input id="com_name" name="bo.com_name" type="text" style=" width:420px; padding-left:5px; height:33px; line-height:33px; background:url(person/company/images/big_input.jpg) no-repeat; font-size:16px;"/></td>
                    </tr>
                    <tr>
                        <td width="145" height="48" style="background:url(common/images/red.png) no-repeat left center; padding-left:30px;">行业类别：</td>
                    	<td colspan="2"  style="text-align:left;">
                       <input id="IndustryID_2" type="hidden" name="bo.trade_code" value="" />
	<input id="btn_IndustryID_2" name="bo.trade_code_value" type="button" value="请选择行业" onclick="IndustrySelect_2()" style="text-align:left;" />
                        </td>
                    </tr>
                    <tr>
                        <td width="145" height="48" style="background:url(common/images/red.png) no-repeat left center; padding-left:30px;">职位类别：</td>
                    	<td colspan="2"  style="text-align:left;">
                        <input id="FuntypeID" type="hidden" name="bo.position_code"  />
	<input id="btn_FuntypeID" name="bo.position_code_value" type="button" value="请选择职位类别" onclick="funtypeSelect_2()" style="text-align:left;"/>
                        </td>
                    </tr>
                    <tr>
                        <td width="145" height="48" style="background:url(common/images/red.png) no-repeat left center; padding-left:30px;">职位名称：</td>
                    	<td colspan="2"  style="text-align:left; position:relative;">
                       <input id="position_name" name="bo.position_name" type="text" style=" width:420px; padding-left:5px; height:33px; line-height:33px; background:url(person/company/images/big_input.jpg) no-repeat; font-size:16px;"/>
                        </td>
                    </tr>
                    <tr>
                        <td width="145" height="48" style="background:url(common/images/red.png) no-repeat left center; padding-left:30px;">工作时间：</td>
                    	<td colspan="2"  style="text-align:left; position:relative;">
                       		<input readonly id="begindate" name="bo.begindate" type="text" id="datepicker"  onClick="WdatePicker({dateFmt:'yyyy-MM',maxDate:'#F{$dp.$D(\'enddate\')||\'%y-%M\'}'})" 
                       		style="width: 82px; height: 33px; 
								line-height: 33px; background: url(common/images/nian.jpg) repeat-x; 
								margin-right: 10px; text-align: center; font-size: 16px;"/> 
								至
							<input readonly id="enddate" name="bo.enddate" type="text" id="datepicker"  onClick="WdatePicker({dateFmt:'yyyy-MM',minDate:'#F{$dp.$D(\'begindate\')}',maxDate:'%y-%M'})" 
                       		style="width: 82px; height: 33px; 
								line-height: 33px; background: url(common/images/nian.jpg) repeat-x; 
								margin-right: 10px; text-align: center; font-size: 16px;"/> （结束时间不填表示至今）
        				</td>
                    </tr>
                    <tr>
                        <td width="145" height="48"  style="background:url(common/images/red.png) no-repeat left center; padding-left:30px;">职位月薪：</td>
                    	<td colspan="2"  style="text-align:left;">
                        <select name="bo.salary_scope"  id="salary_scope" style=" width:198px;">
                        	 <s:iterator id="dic" value="dicts.desired_salary_scope">
									 <option value="${dictionary_code }">${value }</option>
								</s:iterator>
                        </select>
                        </td>
                    </tr>
                    <tr>
                        <td width="145" style="background:url(common/images/red.png) no-repeat left 10px; padding-left:30px; vertical-align:top;">工作描述：</td>
                    	<td colspan="2"  style="text-align:left;">
                        	<textarea name="bo.job_description" id="job_description" cols="" rows="" style="width:557px; height:233px; padding:5px; background:url(common/images/textarea_2.jpg); font-size:14px; color:#636262; overflow:auto; overflow-x:hidden;"></textarea>
                            <p id="descriptionTip" style="color:red"></p>
                            <p style="margin-top:10px; font-size:12px;">（限2000个字）</p>
                        </td>
                    </tr>
                    
                    
                    <tr>
                        <td width="145" height="48" style="padding-left:30px;">企业性质：</td>
                    	<td colspan="2"  style="text-align:left;">
                        <select name="bo.com_type" id="com_type" style=" width:198px; margin-right:20px;">
                       			<s:iterator id="dic" value="dicts.company_type">
									 <option value="${dictionary_code }">${value }</option>
								</s:iterator>
                        </select>
                        企业规模：
                        <select name="bo.com_size" id="com_size" style=" width:198px; margin-left:10px;">
                        	<s:iterator id="dic" value="dicts.company_size">
									 <option value="${dictionary_code }">${value }</option>
								</s:iterator>
                        </td>
                    </tr>
                    <tr>
                        <td width="145" height="98" style="padding-left:30px;"></td>
                    	<td width="275"  style="text-align:right;">
                        <input onclick="saveAndAdd('person/saveUBCompany','<%=basePath%>person/findAllUBCompany?lm_tab_name=${lm_tab_name}');" type="button" value="保存并新增" style="width:112px; height:34px; background:#fea201; color:#FFF; cursor:pointer; font-size:16px; margin-right:20px;" />
                        </td>
                        <td width="320">
                        	<input onclick="save('person/saveUBCompany','<%=basePath%>person/findAllUBCompany?lm_tab_name=${lm_tab_name}');" type="button" value="保 存" style="width:112px; height:34px; background:#fea201; color:#FFF; cursor:pointer; font-size:16px;" />
                            <input onclick="javascript:history.back();location.reload();" type="button" value="返 回" style="width:112px; height:34px; background:#ececec; color:#747171; cursor:pointer; font-size:16px; margin-left:20px;" />
                        </td>
                    </tr>
                </table>
                </form>
            </div>
        </div>
       <br  />
      </div>
      <jsp:include page="/common/page/footer.jsp" />
    </div>
</body>
</html>
<!-- alpha div -->
<div id="maskLayer" style="display:none">
<iframe id="maskLayer_iframe" frameBorder=0 scrolling=no style="filter:alpha(opacity=50)"></iframe>
<div id="alphadiv" style="filter:alpha(opacity=50);-moz-opacity:0.5;opacity:0.5"></div>
	<div id="drag">
		<h3 id="drag_h"></h3>
		<div id="drag_con"></div><!-- drag_con end -->
	</div>
</div><!-- maskLayer end -->
</div>
<!-- alpha div end -->
<div id="sublist" style="display:none"></div>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="payable" extends="default" namespace="/payable">

		<!-- 搜搜机票应付款 -->
		<action name="searchAirTicketPayableByPage" class="airTicketPayableAction" method="searchAirTicketPayableByPage">
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
				<param name="ignoreHierarchy">false</param>
			</result>
		</action>

		<!-- 机票应付款支付申请 -->
		<action name="applyAirTicketPay" class="airTicketPayableAction" method="applyAirTicketPay">
			<result name="success" type="str">resultStr</result>
		</action>

		<!-- 根据payable_pks搜索 airTiketpayable -->
		<action name="searchAirTicketPayablesByPks" class="airTicketPayableAction" method="searchAirTicketPayablesByPks">
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
				<param name="ignoreHierarchy">false</param>
			</result>
		</action>
		<action name="searchAirTicketPaidDetailByPage" class="airTicketPaidDetailAction" method="searchAirTicketPaidDetailByPage">
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
				<param name="ignoreHierarchy">false</param>
			</result>
		</action>
		<!-- 支付机票款 -->
		<action name="payAirTicket" class="airTicketPayableAction" method="payAirTicket">
			<result name="success" type="str">resultStr</result>
		</action>
		<!-- 支付款退反 -->
		<action name="backRecive" class="airTicketPaidDetailAction" method="backRecive">
			<result name="success" type="str">resultStr</result>
		</action>
		<!-- 机票往来业务冲账 -->
		<action name="businessStrike" class="airTicketPaidDetailAction" method="businessStrike">
			<result name="success" type="str">resultStr</result>
		</action>
		<!-- 机票往来押金冲账 -->
		<action name="depositStrike" class="airTicketPaidDetailAction" method="depositStrike">
			<result name="success" type="str">resultStr</result>
		</action>
		<!-- 新建票务单纯收支 -->
		<action name="createPaymentDetail" class="airTicketPaidDetailAction" method="createPaymentDetail">
			<result name="success" type="str">resultStr</result>
		</action>
		<!-- 新建机票押金无业务扣款 -->
		<action name="createDeduct" class="airTicketPaidDetailAction" method="createDeduct">
			<result name="success" type="str">resultStr</result>
		</action>
		<!-- 查询应付款涉及到的名单 -->
		<action name="searchPayablePassengersByPayablePk" class="airTicketPayableAction" method="searchPayablePassengersByPayablePk">
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
				<param name="ignoreHierarchy">false</param>
			</result>
		</action>
		<!-- 查询应付款涉及到的机票信息 -->
		<action name="searchTicketInfoByPayablePk" class="airTicketPayableAction" method="searchTicketInfoByPayablePk">
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
				<param name="ignoreHierarchy">false</param>
			</result>
		</action>
		<!-- 查询机票往来详表的支付详情 -->
		<action name="searchPaidDetailByRelatedPk" class="airTicketPaidDetailAction" method="searchPaidDetailByRelatedPk">
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
				<param name="ignoreHierarchy">false</param>
			</result>
		</action>
		<!-- 打回票务支出 -->
		<action name="rollBackTicketPayApply" class="airTicketPaidDetailAction" method="rollBackTicketPayApply">
			<result name="success" type="str">resultStr</result>
		</action>
	</package>
</struts>